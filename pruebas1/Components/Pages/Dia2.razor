@page "/dia2"
@using System.Linq
@using System.Globalization
@inject NavigationManager navigate
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<!-- modall formulario -->
<button class="btn btn-success" @onclick="@OpenModal">➕ Abrir Modal de Creación</button>
<br />
<br />
<br />
<!-- MODAL -->
<div class="modal-container @(ShowModal ? "visible" : "")" @onclick="CloseModal">
    <div class="modal-content" @onclick:stopPropagation="true">
        <!-- CABECERA -->
        <div class="modal-header">
            <h2 class="modal-title">Crear Nuevo @FormType</h2>
            <span class="close-button" @onclick="CloseModal">&times;</span>
        </div>

        <!-- CUERPO DIVIDIDO -->
        <div class="modal-body-wrapper">
            <!-- Sidebar: selector de tipo -->
            <div class="form-type-selector">
                <button class="@(FormType == FormTypes.Evento ? "active" : "")"
                        @onclick="@(() => SetFormType(FormTypes.Evento))">
                    📅 Evento
                </button>
                <button class="@(FormType == FormTypes.Tarea ? "active" : "")"
                        @onclick="@(() => SetFormType(FormTypes.Tarea))">
                    ✅ Tarea
                </button>
                <button class="@(FormType == FormTypes.Administrativa ? "active" : "")"
                        @onclick="@(() => SetFormType(FormTypes.Administrativa))">
                    🗂️ Administrativa
                </button>
            </div>

            <!-- Formulario dinámico -->
            <div class="form-section-wrapper">
                @if (FormType == FormTypes.Evento)
                {
                    <div class="form-section">
                        <div class="form-group">
                            <label>Título del evento</label>
                            <input class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Fecha</label>
                            <input type="date" class="form-control" />
                        </div>
                    </div>
                }
                else if (FormType == FormTypes.Tarea)
                {
                    <div class="form-section">
                        <div class="form-group form-group-span-2">
                            <label>Nombre de la tarea</label>
                            <input class="form-control" />
                        </div>
                        <div class="form-group form-group-span-2">
                            <label>Subtareas</label>
                            <div class="input-group">
                                <input class="form-control"
                                       @bind="newSubtask"
                                       @onkeydown="AddSubtaskOnEnter"
                                       placeholder="Escribe y presiona Enter" />
                                <button class="btn btn-success" @onclick="AddSubtask">➕</button>
                            </div>
                            <ul class="todo-list">
                                @foreach (var t in subtasks)
                                {
                                    <li>
                                        <input type="checkbox" />
                                        <span>@t</span>
                                        <button class="delete-button" @onclick="() => RemoveSubtask(t)">✖</button>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
                else if (FormType == FormTypes.Administrativa)
                {
                    <div class="form-section">
                        <div class="form-group form-group-span-2">
                            <label>Descripción administrativa</label>
                            <textarea class="form-control tall-textarea"></textarea>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- FOOTER -->
        <div class="modal-footer">
            <button class="btn btn-secondary" @onclick="CloseModal">Cancelar</button>
            <button class="btn btn-success" @onclick="CloseModal">Guardar</button>
        </div>
    </div>
</div>
<div class="agenda-container">
    <!-- BARRA SUPERIOR CON FECHA Y BOTONES DE NAVEGACIÓN -->
    <div class="top-bar-container">
        <div class="fecha-header">
            <button class="calendar-btn" @onclick="DiaAnterior"><i class="bi bi-arrow-left-circle"></i></button>
            <span class="fecha-texto">@FechaFormateada</span>
            <button class="calendar-btn" @onclick="DiaSiguiente"><i class="bi bi-arrow-right-circle"></i></button>

            <div class="calendar-wrapper">
                <button class="calendar-btn" @onclick="AbrirCalendario">📅</button>

                @if (MostrarModal)
                {
                    <!-- CALENDARIO POPUP -->
                    <div class="modal-popover" @onclick:stopPropagation="true">
                        <div class="calendar-header">
                            <button class="calendar-btn" @onclick="MesAnterior"><i class="bi bi-chevron-left"></i></button>
                            <strong>@MesActual.ToString("MMMM yyyy", new CultureInfo("es-ES"))</strong>
                            <button class="calendar-btn" @onclick="MesSiguiente"><i class="bi bi-chevron-right"></i></button>
                        </div>

                        <div class="calendar-grid">
                            @foreach (var dia in DiasSemana)
                            {
                                <div class="calendar-week-day"><strong>@dia</strong></div>
                            }
                            @foreach (var day in DiasDelCalendario)
                            {
                                <div class="calendar-day @(day.Month != MesActual.Month ? "calendar-other-month" : "") @(day.Date == DateTime.Now.Date ? "calendar-today" : "")"
                                     @onclick="() => SeleccionarFecha(day)">
                                    @day.Day
                                </div>
                            }
                        </div>

                        <div style="margin-top:10px; text-align:center;">
                            <button class="calendar-btn" @onclick="CerrarCalendario">✖ Cerrar</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <br />

    <!-- MENSAJES SI NO HAY ACTIVIDADES -->
    @if (FechaSeleccionada.DayOfWeek == DayOfWeek.Sunday)
    {
        <div class="col-12 text-center">
            <div class="alert alert-warning shadow-sm">
                Día no laboral – @FechaSeleccionada.ToString("dddd, dd MMMM yyyy", new CultureInfo("es-ES"))
            </div>
        </div>
    }
    else if (!Categories.Any())
    {
        <div class="col-12 text-center">
            <div class="alert alert-info shadow-sm">
                No hubo actividades o tareas asignadas para @FechaSeleccionada.ToString("dddd, dd MMMM yyyy", new CultureInfo("es-ES"))
            </div>
        </div>
    }
    else
    {
        <!-- BLOQUES DE CATEGORÍAS -->
        @foreach (var cat in Categories)
        {
            <div class="card block-card @cat.ColorClass">
                <div class="card-header block-header" @onclick="() => Toggle(cat)">
                    <div class="header-left">
                        <button class="toggle-btn">@((cat.IsOpen) ? "▾" : "▸")</button>
                        <h3 class="block-title">@cat.Name</h3>
                    </div>
                    <div class="header-right">
                        @if (AllCompleted(cat))
                        {
                            <span class="badge completado">Completado ✓</span>
                        }
                        else
                        {
                            <span class="badge pendiente">@RemainingCount(cat) pendiente(s)</span>
                        }
                    </div>
                </div>

                @if (cat.IsOpen)
                {
                    <div class="card-body block-body">
                        <ul class="subtask-list">
                            @foreach (var st in cat.Subtasks)
                            {
                                <li class="subtask-item">
                                    <input type="checkbox" id="@st.Id" checked="@st.IsDone" @onchange="(e) => ToggleSubtask(cat, st)" />
                                    <label for="@st.Id" class="subtask-label @(st.IsDone ? "done" : "")">
                                        <span class="subtask-text">@st.Title</span>
                                        @if (st.IsDone)
                                        {
                                            <small class="done-text">Hecho</small>
                                        }
                                    </label>

                                    @if ((cat.Name == "Tareas Administrativas") && st.ShowTable)
                                    {
                                        <div class="table-wrapper">
                                            <table class="subtask-table">
                                                <thead>
                                                    <tr>
                                                        <th>Subtarea</th>
                                                        <th>Objetivo</th>
                                                        <th>Hecho</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var s2 in st.Subtasks)
                                                    {
                                                        <tr>
                                                            <td>@s2.Title</td>
                                                            <td>Objetivo de @s2.Title</td>
                                                            <td>
                                                                <input type="checkbox" id="@s2.Id" checked="@s2.IsDone" @onchange="(e) => ToggleInnerSubtask(cat, st, s2)" />
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                </li>
                            }
                        </ul>
                        <div class="actions">
                            <button class="btn small" @onclick="() => MarkAll(cat, true)">Marcar todo</button>
                            <button class="btn small outline" @onclick="() => MarkAll(cat, false)">Desmarcar todo</button>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>


<style>

    /* VARIABLES DE COLOR - PALETA MÁS MODERNA */
    :root {
        --primary-color: #5b5b9e; /* Un tono de morado/azul más profundo y moderno */
        --primary-dark-color: #4a4a81;
        --secondary-color: #6c757d;
        --success-color: #28a745;
        --danger-color: #dc3545;
        --background-color: #f4f7f6; /* Fondo más suave */
        --text-color: #343a40; /* Texto oscuro */
        --border-color: #ced4da;
        --input-bg-color: #fff;
        --sidebar-bg: #e9ecef; /* Fondo claro para el selector */
    }
   

    /* ---------------- MODAL BASE ---------------- */
    .modal-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        display: flex;
        justify-content: center;
        align-items: center; /* Centrado vertical en lugar de alineado arriba */
        z-index: 1000;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
    }

        .modal-container.visible {
            opacity: 1;
            visibility: visible;
        }

    .modal-content {
        background-color: var(--input-bg-color);
        border-radius: 12px; /* Esquinas más suaves */
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
        width: 90%;
        max-width: 1000px; /* Ancho grande y definido */
        height: 90vh; /* Mayor altura */
        max-height: 800px;
        transform: scale(0.95);
        transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275); /* Rebote suave */
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .modal-container.visible .modal-content {
        transform: scale(1);
    }

    /* ---------------- CABECERA ---------------- */
    .modal-header {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title {
        font-size: 1.75rem;
        color: var(--primary-color);
        margin: 0;
    }

    .close-button {
        font-size: 2.5rem;
        color: var(--secondary-color);
        position: static;
        transform: none;
        cursor: pointer;
        line-height: 1;
    }

        .close-button:hover {
            color: var(--danger-color);
        }

    /* ---------------- CUERPO PRINCIPAL - DIVIDIDO ---------------- */
    .modal-body-wrapper {
        flex-grow: 1;
        display: flex;
        overflow: hidden;
        background-color: var(--background-color);
    }

    /* Selector Lateral de Tipo (Sidebar) */
    .form-type-selector {
        flex-shrink: 0; /* No se encoge */
        width: 220px; /* Un poco más ancho */
        padding: 1.5rem;
        background-color: var(--sidebar-bg);
        border-right: 1px solid var(--border-color);
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

        .form-type-selector button {
            padding: 0.8rem 1rem;
            border: none;
            background-color: transparent;
            color: var(--text-color);
            font-weight: 500;
            border-radius: 6px;
            text-align: left;
            transition: background-color 0.2s, color 0.2s;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            cursor: pointer;
        }

            .form-type-selector button:hover {
                background-color: #dee2e6;
            }

            .form-type-selector button.active {
                background-color: var(--primary-color);
                color: #fff;
                font-weight: bold;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            }

        .form-type-selector .icon {
            font-size: 1.2rem;
            line-height: 1;
        }

    /* Contenido Principal (Scrollable) */
    .form-section-wrapper {
        flex: 1;
        overflow-y: auto;
        padding: 1.5rem 2rem;
    }

    /* GRID DEL FORMULARIO */
    .form-section {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* Dos columnas fijas para desktop */
        gap: 1.5rem 2rem;
    }

    .form-group-span-2 {
        grid-column: 1 / -1; /* Ocupa las dos columnas */
    }

    .section-label {
        font-size: 1.1rem;
        font-weight: bold;
        color: var(--primary-dark-color);
        margin-bottom: 0.75rem !important;
        border-bottom: 1px dashed var(--border-color);
        padding-bottom: 0.5rem;
        display: block;
    }

    /* Controles y Etiquetas */
    .form-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
        color: var(--text-color);
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid var(--border-color);
        border-radius: 6px;
        box-sizing: border-box;
        font-size: 1rem;
        background-color: var(--input-bg-color);
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(91, 91, 158, 0.25);
        }

    .tall-textarea {
        min-height: 120px;
        resize: vertical;
    }

    .mt-2 {
        margin-top: 0.5rem;
    }

    /* Agrupación en línea (Fecha/Hora) */
    .form-group-inline {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        align-items: flex-end;
    }

    .inline-control-group {
        flex: 1 1 20%;
        min-width: 120px;
    }

    .form-group-checkbox {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-basis: auto; /* Para que no fuerce un ancho grande */
        min-width: unset;
        justify-content: flex-start;
    }

        .form-group-checkbox label {
            margin-bottom: 0;
            order: 2;
        }

        .form-group-checkbox input[type="checkbox"] {
            order: 1;
            width: 1.2rem;
            height: 1.2rem;
            margin: 0;
        }

    /* Botones */
    .btn {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.2s, transform 0.1s;
        font-size: 0.95rem;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: #fff;
    }

        .btn-primary:hover {
            background-color: var(--primary-dark-color);
        }

    .btn-success {
        background-color: var(--success-color);
        color: #fff;
    }

    .btn-secondary {
        background-color: var(--secondary-color);
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    /* Deshabilitado (Disabled) */
    .disabled-group label {
        color: #999;
    }

    .disabled-group input, .disabled-group select, .disabled-group textarea, .disabled-group .input-group button {
        background-color: #e9ecef !important;
        border-color: #dee2e6 !important;
        color: #999 !important;
        cursor: not-allowed !important;
    }

    /* Sub tareas */
    .input-group {
        display: flex;
        gap: 0.5rem;
    }

    .todo-list {
        list-style-type: none;
        padding: 0;
        margin-top: 1rem;
    }

        .todo-list li {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.4rem;
            padding: 0.6rem 1rem;
            background-color: var(--input-bg-color);
            border: 1px solid #e9ecef;
            border-radius: 6px;
        }

        .todo-list input[type="checkbox"] {
            width: 1.1rem;
            height: 1.1rem;
            flex-shrink: 0;
        }

        .todo-list span {
            flex: 1;
            font-size: 0.95rem;
        }

    .delete-button {
        background: none;
        border: none;
        color: #888;
        font-size: 1.5rem;
        cursor: pointer;
        padding: 0;
        line-height: 1;
        flex-shrink: 0;
    }

        .delete-button:hover {
            color: var(--danger-color);
        }

    /* ---------------- FOOTER DEL MODAL ---------------- */
    .modal-footer {
        padding: 1rem 2rem;
        border-top: 1px solid var(--border-color);
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        flex-shrink: 0;
    }

    /* ---------------- ALERTAS (Overlay) ---------------- */
    .alert-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.4);
        z-index: 1999;
    }

    .alert-container {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: var(--input-bg-color);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        z-index: 2000;
        text-align: center;
        min-width: 350px;
    }

        .alert-container h4 {
            color: var(--primary-color);
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

    .alert-buttons {
        margin-top: 1.5rem;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    .btn-danger {
        background-color: var(--danger-color);
        color: #fff;
    }

    /* ---------------- MEDIA QUERIES (Responsive) ---------------- */
    @@media (max-width: 992px) {
        .modal-content {
            max-width: 700px;
            height: 95vh;
            max-height: 95vh;
        }

        .modal-body-wrapper {
            flex-direction: column;
        }
        /* En móvil/tablet, el selector se convierte en una fila horizontal */
        .form-type-selector {
            width: 100%;
            flex-direction: row;
            border-right: none;
            border-bottom: 1px solid var(--border-color);
            padding: 1rem 1.5rem;
            overflow-x: auto;
            white-space: nowrap;
            gap: 0.5rem;
        }

            .form-type-selector button {
                flex-shrink: 0;
                padding: 0.6rem 0.8rem;
            }

        .form-section-wrapper {
            padding: 1.5rem;
        }
        /* En móvil, el grid se colapsa a una sola columna */
        .form-section {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .form-group-span-2 {
            grid-column: auto; /* Deshace el span de 2 columnas */
        }

        .form-group-inline {
            flex-direction: column;
            gap: 1rem;
        }

        .inline-control-group {
            min-width: 100%;
        }
    }
