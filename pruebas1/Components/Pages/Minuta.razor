        private async Task AbrirModal()
        {
            var usuario = LoginService.obtenerUsuarioLogueado();

            NombreAsesor = !string.IsNullOrWhiteSpace(usuario.NombreRed)
                ? usuario.NombreRed
                : usuario.NombreUsuario;

            ClaveAsesor = usuario.IdEmpleado;

            FilasMinuta = new List<FilaMinuta> { new FilaMinuta() };
            IsVisible = true;

            try
            {
                // =============================
                // 1️⃣ Cargar clientes
                // =============================
                var respClientes = await Http.GetAsync("/api/servicio-cliente/admin/clientes");

                if (respClientes.IsSuccessStatusCode)
                {
                    listaClientes = await respClientes.Content.ReadFromJsonAsync<List<ClientesDTO>>() ?? new();
                }
                else
                {
                    Debug.WriteLine("Error cargando clientes: " + respClientes.StatusCode);
                }

                // =============================
                // 2️⃣ Cargar empleado
                // =============================
                var respEmpleado = await Http.GetAsync($"/empleado/Obtener/{usuario.IdUsuario}");
                Debug.WriteLine("La clave del empleado es " + usuario.IdUsuario);
                if (!respEmpleado.IsSuccessStatusCode)
                {
                    Debug.WriteLine("Error obteniendo empleado: " + usuario.IdUsuario  + respEmpleado.StatusCode);
                    return;
                }

            var empleado = await respEmpleado.Content.ReadFromJsonAsync<EmpleadoDTO>();

            if (empleado == null || string.IsNullOrWhiteSpace(empleado.Area))
            {
                Debug.WriteLine("Empleado sin área.");
                return;
            }

            // =============================
            // 3️⃣ Cargar actividades por área
            // =============================
            var respActividades = await Http.GetAsync(
                $"/Minutas/catalogo?area={Uri.EscapeDataString(empleado.Area)}"
            );

            Debug.WriteLine(Uri.EscapeDataString(empleado.Area) + " " + respActividades);
       
                if (respActividades.IsSuccessStatusCode)
                {
                    ListadoActividades = await respActividades
                        .Content
                        .ReadFromJsonAsync<List<ActividadMinutaDTO>>() ?? new();

                    Debug.WriteLine("Cantidad actividades: " + ListadoActividades.Count);
                }

            else
            {
                Debug.WriteLine("Error cargando actividades: " + respActividades.StatusCode);
            }
        }
        catch (Exception ex)
        {
            Debug.WriteLine("ERROR GENERAL: " + ex.Message);
        }

        StateHasChanged();
    }


        private void Cerrar() => IsVisible = false;

        private void AgregarFila() => FilasMinuta.Add(new FilaMinuta());

        private void EliminarFila(FilaMinuta fila)
        {
            if (FilasMinuta.Count > 1) FilasMinuta.Remove(fila);
        }

        private string CalcularTotalHoras()
        {
            TimeSpan total = TimeSpan.Zero;
            foreach (var f in FilasMinuta)
            {
                if (f.Horas.HasValue)
                {
                    total = total.Add(new TimeSpan(f.Horas.Value.Hour, f.Horas.Value.Minute, 0));
                }
            }
            return $"{(int)total.TotalHours} Horas, {total.Minutes} Minutos";
        }

