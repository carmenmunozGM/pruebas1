    private async Task Guardar()
    {
        string mensaje = "";

        // Validar fecha
        if (FechaSeleccionada == default)
            mensaje += "• Debe seleccionar la fecha.\n";

        // Validar filas
        if (FilasMinuta == null || !FilasMinuta.Any())
            mensaje += "• Debe agregar al menos una actividad.\n";
        else
        {
            foreach (var fila in FilasMinuta)
            {
                if (fila.ClienteId <= 0)
                    mensaje += "• Debe seleccionar el cliente.\n";

                if (fila.IdActividad <= 0)
                    mensaje += "• Debe seleccionar la actividad.\n";

                if (string.IsNullOrWhiteSpace(fila.Periodo))
                    mensaje += "• Debe capturar el periodo.\n";

                if (!fila.Horas.HasValue)
                    mensaje += "• Debe capturar las horas invertidas.\n";
            }
        }

        // Si hay errores → mostrar alerta tipo SweetAlert
        if (!string.IsNullOrEmpty(mensaje))
        {
            await JS.InvokeVoidAsync("Swal.fire", new
            {
                icon = "error",
                title = "Campos obligatorios incompletos",
                text = mensaje
            });
            return;
        }

        // Construir DTO
        var dto = new
        {
            Fecha = FechaSeleccionada,
            Comentarios = Observaciones,
            Actividades = FilasMinuta.Select(f => new
            {
                ClaveCliente = f.ClienteId,
                IdActividad = f.IdActividad,
                Periodo = f.Periodo,
                HorasInvertidas = f.Horas!.Value.Hour * 60 + f.Horas.Value.Minute
            }).ToList()
        };

        try
        {
            var response = await Http.PostAsJsonAsync("/Minutas/crear", dto);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("Swal.fire", new
                {
                    icon = "success",
                    title = "Minuta guardada con éxito 🎉",
                    confirmButtonText = "OK"
                });

                Cerrar();
            }
            else
            {
                await JS.InvokeVoidAsync("Swal.fire", new
                {
                    icon = "error",
                    title = "Error al guardar",
                    text = "Ocurrió un error al intentar guardar la minuta."
                });
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("Swal.fire", new
            {
                icon = "error",
                title = "Error inesperado",
                text = ex.Message
            });
        }
    }



