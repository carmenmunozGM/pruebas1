}

/* Inputs */
.custom-input {
    border: 1px solid #ccc;
    border-radius: 12px;
    padding: 0.75rem;
    width: 100%;
    margin-top: 0.3rem;
    font-size: 1rem;
}

    .custom-input:focus {
        border-color: #0B5A67;
        outline: none;
        box-shadow: 0 0 4px rgba(11, 90, 103, 0.4);
    }

/* Botón */
.btn-login {
    width: 100%;
    padding: 0.9rem;
