    private async Task Ingresar()
{
    Loading = true;
    mensajeError = string.Empty;

    try
    {
        // Login
        var usuario = await loginService.login(loginDTO);

        // Obtener agendas asignadas
        usuario.IdAgendasAsignadas = await AgendaService.ObtenerAgendaAsignadasAsync();

        // Guardar usuario
        loginService.guardarUsuario(usuario);

        // UsuarioState
        int agendaActual = usuario.IdAgendasAsignadas?.FirstOrDefault() ?? 0;
        UsuarioState.SetUsuario(usuario.IdUsuario, agendaActual);

        Console.WriteLine($"[Login] IdUsuario: {usuario.IdUsuario}, IdAgenda: {agendaActual}");

        await AgendaService.ObtenerTareasApi(agendaActual);
        await AgendaService.ObtenerEventos(agendaActual);

        navigate.NavigateTo("/dia2");
    }
    catch (Exception ex)
    {
        mensajeError = ex.Message;
    }
    finally
    {
        Loading = false;
    }
}
