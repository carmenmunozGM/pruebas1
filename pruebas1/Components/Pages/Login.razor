}

/* Encabezado */
.login-header h2 {
    color: #0B5A67;
    font-size: 1.6rem;
    margin-bottom: 0.3rem;
}

    .login-header h2 span {
        color: #263C63;
        font-weight: bold;
    }

.login-header h3 {
    color: #263C63;
    font-size: 1.3rem;
    margin-bottom: 2rem;
