@using pruebas1.Components.DTOs
@using pruebas1.Components.Layout
@using pruebas1.Servicios
@layout LoginLayout
@page "/"
@inject LoginService loginService
@inject NavigationManager navigate
@inject UsuarioService UsuarioService   
@inject AgendaService AgendaService
@inject UsuarioState UsuarioState



<EditForm Model="@loginDTO" OnValidSubmit="Ingresar" class="login-container">
    <DataAnnotationsValidator />

    <div class="login-card">
        <!-- Encabezado -->
        <div class="login-header">
            <h2>Bienvenido a <span>Grupo Méndez</span></h2>
            <h3>Agenda GM</h3>
        </div>

        <!-- Usuario -->
        <div class="form-group">
            <label>Usuario</label>
            <InputText class="form-control custom-input" @bind-Value="@loginDTO.nombreusuario" />
            <ValidationMessage For="(() => loginDTO.nombreusuario)" />
        </div>

        <!-- Contraseña -->
        <div class="form-group">
            <label>Contraseña</label>
            <InputText type="password" class="form-control custom-input" @bind-Value="@loginDTO.contraseña" />
            <ValidationMessage For="(() => loginDTO.contraseña)" />
        </div>
        <br />

        @if (!string.IsNullOrEmpty(mensajeError))
        {
            <div class="alert alert-danger" role="alert">
                @mensajeError
            </div>
        }


        @if (Loading)
        {
            <!-- Botón -->
            <div class="form-actions mt-3">
                <button class="btn-login" type="button" disabled>
                    <span class="spinner-grow spinner-grow-sm" aria-hidden="true"></span>
                    <span role="status">Ingresando...</span>
                </button>
            </div>
        }
        else
        {
            <!-- Botón -->
            <div class="form-actions mt-3">
                <button type="submit" class="btn-login">Ingresar</button>
            </div>
        }

    </div>
</EditForm>

<style>
    
