        }
        else if (tarea.Periodicidad == "Eventual")
        {
            IsEventual = true;
            // Iniciamos con el primer día del mes de consulta
            FechasEventuales = new List<DateTime> { new DateTime(FechaConsulta.Year, FechaConsulta.Month, 1) };
            ShowModal = true;
        }
