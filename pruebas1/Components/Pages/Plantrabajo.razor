<h2 class="title">🏢 Servicio a Cliente</h2>

<div class="service-container">
    <!-- Columna izquierda: Grupos de clientes -->
    <div class="column">
        <h3 class="section-title">Grupos de Clientes</h3>

        @foreach (var grupo in GruposClientes)
        {
            <div class="group-block">
                <div class="group-header" @onclick="() => ToggleGrupo(grupo)">
                    <span>@grupo.Nombre</span>
                    <span class="arrow">@(grupo.Expandido ? "⯆" : "⯈")</span>
                </div>

                @if (grupo.Expandido)
                {
                    <ul class="empresa-list">
                        @foreach (var empresa in grupo.Empresas)
                        {
                            <li @onclick="() => OpenModal(empresa.IdUsuarioEntidadAgenda)">
                                🏢 @empresa.Nombre
                            </li>
                        }
                    </ul>
                }
            </div>
        }
    </div>

    <!-- Columna derecha: Clientes individuales -->
    <div class="column">
        <h3 class="section-title">Clientes Individuales</h3>

        <ul class="empresa-list">
            @foreach (var cliente in ClientesIndividuales)
            {
                <li @onclick="() => OpenModal(cliente.IdUsuarioEntidadAgenda)">
                    🧾 @cliente.Nombre
                </li>
            }
        </ul>
    </div>
</div>
<br />
