@page "/plantrabajo"
<br />

<h2 class="title">🏢 Servicio a Cliente</h2>

<div class="service-container">
    <!-- Columna izquierda: Grupos de clientes -->
    <div class="column">
        <h3 class="section-title">Grupos de Clientes</h3>

        @foreach (var grupo in GruposClientes)
        {
            <div class="group-block">
                <div class="group-header" @onclick="() => ToggleGrupo(grupo)">
                    <span>@grupo.Nombre</span>
                    <span class="arrow">@(grupo.Expandido ? "⯆" : "⯈")</span>
                </div>

                @if (grupo.Expandido)
                {
                    <ul class="empresa-list">
                        @foreach (var empresa in grupo.Empresas)
                        {
                            <li @onclick="() => OpenModal(empresa.Nombre, true)">
                                🏢 @empresa.Nombre
                            </li>
                        }
                    </ul>
                }
            </div>
        }
    </div>

    <!-- Columna derecha: Clientes individuales -->
    <div class="column">
        <h3 class="section-title">Clientes Individuales</h3>

        <ul class="empresa-list">
            @foreach (var cliente in ClientesIndividuales)
            {
                <li @onclick="() => OpenModal(cliente.Nombre, false)">
                    🧾 @cliente.Nombre
                </li>
            }
        </ul>
    </div>
</div>

@if (ShowModal)
{
    <div class="overlay" @onclick="CloseModal">
        <div class="modal large" @onclick:stopPropagation="true">
            <h3 class="modal-title">@ModalEmpresa</h3>

            <table class="activities-table">
                <thead>
                    <tr>
                        <th>Actividad</th>
                        <th>Fecha</th>
                        <th>Observaciones</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var actividad in Actividades)
                    {
                        <tr>
                            <td>@actividad.Nombre</td>
                            <td>
                                <input type="date" @bind="actividad.Fecha" class="input-date small" />
                            </td>
                            <td>
                                <textarea @bind="actividad.Observaciones" class="input-text"></textarea>
                            </td>
                           
                        </tr>
                    }
                </tbody>
            </table>

            <div class="modal-footer">
                <button class="btn-save" @onclick="GuardarActividades">Guardar</button>
                <button class="btn-cancel" @onclick="CloseModal">Cerrar</button>
            </div>
        </div>
    </div>
}

