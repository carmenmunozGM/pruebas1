@page "/plantrabajo"
@using pruebas1.Components.DTOs
@using pruebas1.Servicios
@inject ServicioClienteService ServicioClienteService
@inject HttpClient _http
<br />
<br />
<br />
<br />
<h2 class="title">🏢 Servicio a Cliente</h2>

<div class="service-container">
    <!-- Columna izquierda: Grupos de clientes -->
    <div class="column">
        <h3 class="section-title">Grupos de Clientes</h3>

        @foreach (var grupo in GruposClientes)
        {
            <div class="group-block">
                <div class="group-header" @onclick="() => ToggleGrupo(grupo)">
                    <span>@grupo.Nombre</span>
                    <span class="arrow">@(grupo.Expandido ? "⯆" : "⯈")</span>
                </div>

                @if (grupo.Expandido)
                {
                    <ul class="empresa-list">
                        @foreach (var empresa in grupo.Empresas)
                        {
                            <li @onclick="() => OpenModal(empresa.IdUsuarioEntidadAgenda)">
                                🏢 @empresa.Nombre
                            </li>
                        }
                    </ul>
                }
            </div>
        }
    </div>

    <!-- Columna derecha: Clientes individuales -->
    <div class="column">
        <h3 class="section-title">Clientes Individuales</h3>

        <ul class="empresa-list">
            @foreach (var cliente in ClientesIndividuales)
            {
                <li @onclick="() => OpenModal(cliente.IdUsuarioEntidadAgenda)">
                    🧾 @cliente.Nombre
                </li>
            }
        </ul>
    </div>
</div>
<br />
<br />
@if (ShowModal)
{
    <div class="overlay" @onclick="CloseModal">
        <div class="modal large" @onclick:stopPropagation="true">
            <h3 class="modal-title">@ModalEmpresa</h3>


            @if (MostrarAlerta)
            {
                <div class="alert alert-warning">
                    @MensajeAlerta
                </div>
            }

            @foreach (var servicio in ServiciosModal)
            {
                <h4 class="service-subtitle">
                    @servicio.NombreServicio
                </h4>
                

                <table class="activities-table">
                    <thead>
                        <tr>
                            <th>Actividad</th>
                            <th>Fecha</th>
                            <th>Modificar fecha</th>
                            <th>Minuta</th>
                            <th>Observaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var actividad in servicio.Actividades)
                        {
                            <tr>
                                <td>@actividad.Nombre</td>

                                <td>
                                    @if (actividad.Fecha.HasValue)
                                    {
                                        <input type="date"
                                               value="@actividad.Fecha.Value.ToString("yyyy-MM-dd")"
                                               class="input-date small"
                                               disabled
                                               title="La fecha solo puede modificarse desde el botón 📅" />
                                    }
                                    else
                                    {
                                        <DatePicker Value="actividad.Fecha"
                                                    ValueChanged="@(fecha => actividad.Fecha = fecha)"
                                                    CssClass="input-date small" />
                                    }
                                </td>

                                <td>
                                    <button class="btn-calendar"
                                             title="Modificar fecha"
                                             @onclick="() => AbrirSubModal(actividad)">
                                        📅
                                    </button>
                                </td>

                                <td class="check-cell">
                                    <input type="checkbox"
                                       class="form-check-input"
                                       checked="@actividad.Minuta"
                                       @onchange="async e => await OnMinutaChanged(actividad, e)" />

                                </td>

                                <td>
                                    <textarea class="input-text"
                                              value="@actividad.Observaciones"
                                              @onchange="async e => await OnObservacionesChanged(actividad, e)">
                                      </textarea>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            <div class="modal-footer">
                <button class="btn-save" @onclick="GuardarActividades">Guardar</button>
                <button class="btn-cancel" @onclick="CloseModal">Cerrar</button>
            </div>

            @if (ShowSubModal)
            {
                <div class="submodal-overlay" @onclick="CerrarSubModal">
                    <div class="submodal" @onclick:stopPropagation="true">
                        <h4>Modificar fecha para: @ActividadSeleccionada?.Nombre</h4>

                        <!-- Fecha actual (no editable) -->
                        <label>Fecha actual (no editable):</label>
                        <input type="date" value="@(OriginalFecha?.ToString("yyyy-MM-dd") ?? String.Empty)" disabled class="input-date" />

                        <!-- Nueva fecha (obligatoria) -->
                        <label>Selecciona nueva fecha <span class="required">*</span>:</label>
                        <DatePicker Value="NuevaFecha"
                                    ValueChanged="@(fecha => NuevaFecha = fecha)"
                                    CssClass="form-control" />

                        @if (MostrarErrorFecha)
                        {
                            <div class="error-msg">La nueva fecha es obligatoria.</div>
                        }

                        <!-- Motivo del cambio (obligatorio) -->
                        <label>Motivo del cambio <span class="required" style="color:red;">*</span>:</label>
                            <textarea @bind="MotivoCambio"
                                      class="input-text @(MostrarErrorMotivo ? "is-invalid" : "")"
                                      style="@(MostrarErrorMotivo ? "border: 1px solid red;" : "")">
                            </textarea>

                                            @if (MostrarErrorMotivo)
                                            {
                                                <div style="color: red; font-size: 0.85em; margin-top: 4px;">
                                                    ✖ El motivo es obligatorio para justificar el cambio de fecha.
                                                </div>
                                            }


                        @if (!string.IsNullOrEmpty(ErrorServidor))
                        {
                            <div class="alert alert-danger" style="color: red; background: #fee; padding: 10px; margin-bottom: 10px; border: 1px solid red;">
                                ⚠️ @ErrorServidor
                            </div>
                        }

                        <div class="modal-footer">
                            <button class="btn-save" @onclick="GuardarCambioFecha" disabled="@Procesando">
                                @(Procesando ? "Guardando..." : "Guardar")
                            </button>
                            <button class="btn-cancel" @onclick="CerrarSubModal" disabled="@Procesando">Cancelar</button>
                        </div>
                        

                        <!-- Historial compacto con scroll -->
                        <label style="margin-top:8px;">Historial de cambios:</label>
                        <div class="historial-box">
                            @if (ActividadSeleccionada?.HistorialFechas != null && ActividadSeleccionada.HistorialFechas.Any())
                            {
                                <ul class="historial-list">
                                    @foreach (var h in ActividadSeleccionada.HistorialFechas.OrderByDescending(x => x.FechaMovimiento))
                                    {
                                        <li>
                                            <div class="hist-row">
                                                <div> @(h.FechaMovimiento.ToString("yyyy-MM-dd") ?? "—")</div>
                                                <div>De: @(h.FechaAnterior.ToString("yyyy-MM-dd") ?? "—")</div>
                                                <div> A: @(h.FechaNueva.ToString("yyyy-MM-dd") ?? "—")</div>
                                                <div>Motivo: @h.Motivo</div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="muted">No hay cambios registrados.</div>
                            }
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
}
@code {

    // Clase para historial de cambios
    public class CambioFecha
    {
        public DateTime FechaMovimiento { get; set; }
        public DateTime FechaAnterior { get; set; }
        public DateTime FechaNueva { get; set; }
        public string Motivo { get; set; } = string.Empty;
    }


    private string? ErrorServidor = null;
private bool Procesando = false; // Para deshabilitar el botón mientras guarda

    public class Actividad
{
    public int IdCheckListAsignacion { get; set; }
    public int IdActividadGeneral { get; set; }

    // 🔑 CLAVE PARA HISTORIAL
    public int IdHorasProgramaTrabajo { get; set; }

    public string Nombre { get; set; } = string.Empty;
    public DateTime? Fecha { get; set; }
    public bool Minuta { get; set; }
    public string? Observaciones { get; set; }

    public List<CambioFecha> HistorialFechas { get; set; } = new();
}



    public class Empresa
    {
        public int IdUsuarioEntidadAgenda { get; set; }
        public string Nombre { get; set; } = string.Empty;
    }

    public class GrupoCliente
    {
        public string Nombre { get; set; } = string.Empty;
        public bool Expandido { get; set; }
        public List<Empresa> Empresas { get; set; } = new();
    }

    private List<GrupoCliente> GruposClientes { get; set; } = new();
    private List<Empresa> ClientesIndividuales { get; set; } = new();
    bool ShowSubModal = false;
    private bool ShowModal { get; set; }
    private string ModalEmpresa { get; set; } = string.Empty;
    private List<Actividad> Actividades { get; set; } = new();
    Actividad ActividadSeleccionada;
    private List<ServicioModal> ServiciosModal { get; set; } = new();

    public class ServicioModal
    {
        public string NombreServicio { get; set; } = string.Empty;
        public List<Actividad> Actividades { get; set; } = new();
    }

    // Campos para el submodal
    private DateTime? NuevaFecha { get; set; }
    private DateTime? OriginalFecha { get; set; }
    string MotivoCambio = "";

    // Validación
    bool MostrarErrorFecha = false;
    bool MostrarErrorMotivo = false;

    protected override async Task OnInitializedAsync()
    {
        var data = await ServicioClienteService.ObtenerMisEmpresas();

        GruposClientes = data.Grupos.Select(g => new GrupoCliente
        {
            Nombre = g.NombreGrupo,
            Empresas = g.Clientes.Select(c => new Empresa
            {
                IdUsuarioEntidadAgenda = c.IdUsuarioEntidadAgenda,
                Nombre = c.NombreCliente
            }).ToList()
        }).ToList();

        ClientesIndividuales = data.ClientesIndividuales.Select(c => new Empresa
        {
            IdUsuarioEntidadAgenda = c.IdUsuarioEntidadAgenda,
            Nombre = c.NombreCliente
        }).ToList();
    }



    private void ToggleGrupo(GrupoCliente grupo)
    {
        grupo.Expandido = !grupo.Expandido;
    }

    private async Task OpenModal(int idUsuarioEntidadAgenda)
    {
        ShowModal = true;
        ServiciosModal.Clear();

        var data = await ServicioClienteService.ObtenerActividadesEmpresa(idUsuarioEntidadAgenda);

        if (data == null)
        {
            ModalEmpresa = "Empresa sin actividades";
            return;
        }

        ModalEmpresa = data.NombreEmpresa;
        ServiciosModal = data.Servicios
    .Select(s => new ServicioModal
    {
        NombreServicio = s.NombreServicio,
        Actividades = s.Actividades
            .OrderBy(a => a.IdActividadGeneral)
            .Select(a => new Actividad
            {
                IdCheckListAsignacion = a.IdCheckListAsignacion,
                IdActividadGeneral = a.IdActividadGeneral,
                IdHorasProgramaTrabajo = a.IdHorasProgramaTrabajo,

                Nombre = a.NombreActividad,
                Fecha = a.Fecha,
                Minuta = a.Minuta ?? false,
                Observaciones = a.Observaciones
            })
            .ToList()
    })
    .ToList();


    }




    private void GuardarActividades()
    {
        ShowModal = false;
    }

    private async Task AbrirSubModal(Actividad actividad)
    {

        // Limpiar rastro de errores anteriores antes de mostrar el modal
        ErrorServidor = null;
        MostrarErrorFecha = false;
        MostrarErrorMotivo = false;
        MotivoCambio = ""; // Opcional: limpiar el motivo anterior
        if (!actividad.Fecha.HasValue)
        {
            MostrarAlertaSinFecha();
            return;
        }

        ActividadSeleccionada = actividad;
        OriginalFecha = actividad.Fecha;
        NuevaFecha = actividad.Fecha;

        var historialDto =
            await ServicioClienteService.ObtenerHistorialFechasAsync(
                actividad.IdHorasProgramaTrabajo
            );

        actividad.HistorialFechas = historialDto
            .Select(h => new CambioFecha
            {
                FechaMovimiento = h.FechaModificacion,
                FechaAnterior = h.FechaAnterior,
                FechaNueva = h.FechaNueva,
                Motivo = h.Motivo
            })
            .ToList();

        ShowSubModal = true;
    }

    void CerrarSubModal()
    {
        ShowSubModal = false;

        // --- LIMPIEZA DE MENSAJES DE ERROR ---
        ErrorServidor = null;
        MostrarErrorFecha = false;
        MostrarErrorMotivo = false;

        // --- LIMPIEZA DE CAMPOS ---
        MotivoCambio = "";
        NuevaFecha = null;
        OriginalFecha = null;
        ActividadSeleccionada = null;

        // Si tenías una alerta general en el modal principal, también la limpiamos
        MostrarAlerta = false;
        MensajeAlerta = "";
    }

    void CloseModal()
    {
        ShowModal = false;
        ShowSubModal = false;
        MostrarAlerta = false;
        MensajeAlerta = "";
        ActividadSeleccionada = null;
    }


    bool MostrarAlerta = false;
    string MensajeAlerta = "";

void MostrarAlertaSinFecha()
    {
        MensajeAlerta = "Para modificar la fecha, primero debes registrar una fecha en la actividad.";
        MostrarAlerta = true;
    }

    private async Task GuardarCambioFecha()
    {
        // 1. Limpiar errores previos y mostrar que estamos trabajando
        MostrarErrorFecha = false;
        MostrarErrorMotivo = false;
        ErrorServidor = null;

        // 2. Validaciones locales (Para que el usuario no envíe campos vacíos)
        if (NuevaFecha == null) MostrarErrorFecha = true;
        if (string.IsNullOrWhiteSpace(MotivoCambio)) MostrarErrorMotivo = true;

        // Si algo falta, no seguimos
        if (MostrarErrorFecha || MostrarErrorMotivo || ActividadSeleccionada == null)
            return;

        try
        {
            Procesando = true;

            var dto = new HistorialFechaCreateDTO
            {
                IdHorasProgramaTrabajo = ActividadSeleccionada.IdHorasProgramaTrabajo,
                FechaNueva = NuevaFecha.Value,
                Motivo = MotivoCambio
            };

            // 3. Intentar guardar en la API
            var response = await _http.PostAsJsonAsync("entidadAgenda/historial-fecha", dto);

            if (response.IsSuccessStatusCode)
            {
                // --- CASO ÉXITO ---
                var historialDto = await ServicioClienteService.ObtenerHistorialFechasAsync(
                    ActividadSeleccionada.IdHorasProgramaTrabajo);

                ActividadSeleccionada.HistorialFechas = historialDto.Select(h => new CambioFecha
                {
                    FechaMovimiento = h.FechaModificacion,
                    FechaAnterior = h.FechaAnterior,
                    FechaNueva = h.FechaNueva,
                    Motivo = h.Motivo
                }).ToList();

                ActividadSeleccionada.Fecha = NuevaFecha;

                // Solo aquí cerramos el modal
                ShowSubModal = false;
                ErrorServidor = null;
                MotivoCambio = ""; // Limpiamos para la próxima
            }
            else
            {
                // --- CASO ERROR DE VALIDACIÓN SQL ---
                // Leemos el contenido del error 500 que mandaste antes
                var errorContent = await response.Content.ReadAsStringAsync();

                // Si el error contiene el mensaje del SQL, lo mostramos
                if (errorContent.Contains("La nueva fecha debe ser mayor"))
                {
                    ErrorServidor = "La nueva fecha debe ser mayor a la última fecha registrada en el historial.";
                }
                else
                {
                    ErrorServidor = "Error del servidor: No se pudo validar la fecha. Intente con una fecha posterior.";
                }
            }
        }
        catch (Exception ex)
        {
            // Error de red o crash inesperado
            ErrorServidor = "Error de conexión o del sistema: " + ex.Message;
        }
        finally
        {
            Procesando = false;
        }
    }

    private async Task OnMinutaChanged(Actividad actividad, ChangeEventArgs e)
{
    actividad.Minuta = (bool)e.Value!;

    if (actividad.Fecha == null)
        return; // No se guarda sin fecha

    await ServicioClienteService.GuardarFechaYMinutaAsync(
        new HorasProgramaTrabajoUpsertDTO
        {
            IdAsignacion = actividad.IdCheckListAsignacion,
            Fecha = actividad.Fecha.Value,
            Minuta = actividad.Minuta
        }
    );
}

    private async Task OnFechaChanged(Actividad actividad, DateTime? fecha)
    {
        actividad.Fecha = fecha;

        if (fecha == null)
            return;

        await ServicioClienteService.GuardarFechaYMinutaAsync(
            new HorasProgramaTrabajoUpsertDTO
            {
                IdAsignacion = actividad.IdCheckListAsignacion,
                Fecha = fecha.Value,
                Minuta = actividad.Minuta
            }
        );
    }

    private async Task OnObservacionesChanged(Actividad actividad, ChangeEventArgs e)
        {
            actividad.Observaciones = e.Value?.ToString();

            await ServicioClienteService.GuardarObservacionesAsync(
                actividad.IdCheckListAsignacion,
                actividad.Observaciones
            );
        }

}

