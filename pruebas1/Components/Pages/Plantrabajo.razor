@page "/plantrabajo"
@using pruebas1.Components.DTOs
@using pruebas1.Servicios
@inject ServicioClienteService ServicioClienteService
@inject IJSRuntime JS
@inject HttpClient _http
<br />
<br />
<br />
<br />
<h2 class="title">🏢 Servicio a Cliente</h2>

<div class="service-container">
    <!-- Columna izquierda: Grupos de clientes -->
    <div class="column">
        <h3 class="section-title">Grupos de Clientes</h3>

        @foreach (var grupo in GruposClientes)
        {
            <div class="group-block">
                <div class="group-header" @onclick="() => ToggleGrupo(grupo)">
                    <span>@grupo.Nombre</span>
                    <span class="arrow">@(grupo.Expandido ? "⯆" : "⯈")</span>
                </div>

                @if (grupo.Expandido)
                {
                    <ul class="empresa-list">
                        @foreach (var empresa in grupo.Empresas)
                        {
                            <li @onclick="() => OpenModal(empresa.IdUsuarioEntidadAgenda)">
                                🏢 @empresa.Nombre
                            </li>
                        }
                    </ul>
                }
            </div>
        }
    </div>

    <!-- Columna derecha: Clientes individuales -->
    <div class="column">
        <h3 class="section-title">Clientes Individuales</h3>

        <ul class="empresa-list">
            @foreach (var cliente in ClientesIndividuales)
            {
                <li @onclick="() => OpenModal(cliente.IdUsuarioEntidadAgenda)">
                    🧾 @cliente.Nombre
                </li>
            }
        </ul>
    </div>
</div>
<br />
<br />
@if (ShowModal)
{
    <div class="overlay" @onclick="CloseModal">
        <div class="modal large" @onclick:stopPropagation="true">
            <h3 class="modal-title">@ModalEmpresa</h3>


            @if (MostrarAlerta)
            {
                <div class="alert alert-warning">
                    @MensajeAlerta
                </div>
            }

            @foreach (var servicio in ServiciosModal)
            {
                <h4 class="service-subtitle">
                    @servicio.NombreServicio
                </h4>
                

                <table class="activities-table">
                    <thead>
                        <tr>
                            <th>Actividad</th>
                            <th>Fecha</th>
                            <th>Modificar fecha</th>
                            <th>Minuta</th>
                            <th>Observaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var actividad in servicio.Actividades)
                        {
                            <tr>
                                <td>@actividad.Nombre</td>

                                <td>
                                                                    @* Si la fecha viene de la DB, mostramos el campo bloqueado *@
                                    @if (actividad.FechaOriginalDesdeDB)
                                    {
                                        <input type="date"
                                               value="@actividad.Fecha?.ToString("yyyy-MM-dd")"
                                               class="input-date small"
                                               disabled
                                               title="Para modificar una fecha guardada, usa el botón 📅" />
                                    }
                                    else
                                    {
                                        @* Si NO viene de la DB (estaba vacía), mostramos el DatePicker editable *@
                                        <DatePicker Value="actividad.Fecha"
                                                    ValueChanged="@((fecha) => OnFechaChanged(actividad, fecha))"
                                                    CssClass="input-date small" />
                                    }
                                </td>

                                <td>
                                    <button class="btn-calendar"
                                             title="Modificar fecha"
                                             @onclick="() => AbrirSubModal(actividad)">
                                        📅
                                    </button>
                                </td>

                                <td class="check-cell">
                                    <input type="checkbox"
                                       class="form-check-input"
                                       checked="@actividad.Minuta"
                                       @onchange="async e => await OnMinutaChanged(actividad, e)" />

                                </td>

                                <td>
                                    <textarea class="input-text"
                                              value="@actividad.Observaciones"
                                              @onchange="async e => await OnObservacionesChanged(actividad, e)">
                                      </textarea>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

                        <div class="modal-footer">
                <button class="btn-save" @onclick="GuardarTodo">Guardar</button>
                <button class="btn-cancel" @onclick="CloseModal">Cerrar</button>
            </div>

            @if (ShowSubModal)
            {
                <div class="submodal-overlay" @onclick="CerrarSubModal">
                    <div class="submodal" @onclick:stopPropagation="true">
                        <h4>Modificar fecha para: @ActividadSeleccionada?.Nombre</h4>

                        <!-- Fecha actual (no editable) -->
                        <label>Fecha actual (no editable):</label>
                        <input type="date" value="@(OriginalFecha?.ToString("yyyy-MM-dd") ?? String.Empty)" disabled class="input-date" />

                        <!-- Nueva fecha (obligatoria) -->
                        <label>Selecciona nueva fecha <span class="required">*</span>:</label>
                        <DatePicker Value="NuevaFecha"
                                    ValueChanged="@(fecha => NuevaFecha = fecha)"
                                    CssClass="form-control" />

                        @if (MostrarErrorFecha)
                        {
                            <div class="error-msg">La nueva fecha es obligatoria.</div>
                        }

                        <!-- Motivo del cambio (obligatorio) -->
                        <label>Motivo del cambio <span class="required" style="color:red;">*</span>:</label>
                            <textarea @bind="MotivoCambio"
                                      class="input-text @(MostrarErrorMotivo ? "is-invalid" : "")"
                                      style="@(MostrarErrorMotivo ? "border: 1px solid red;" : "")">
                            </textarea>

                                            @if (MostrarErrorMotivo)
                                            {
                                                <div style="color: red; font-size: 0.85em; margin-top: 4px;">
                                                    ✖ El motivo es obligatorio para justificar el cambio de fecha.
                                                </div>
                                            }


                        @if (!string.IsNullOrEmpty(ErrorServidor))
                        {
                            <div class="alert alert-danger" style="color: red; background: #fee; padding: 10px; margin-bottom: 10px; border: 1px solid red;">
                                ⚠️ @ErrorServidor
                            </div>
                        }

                        <div class="modal-footer">
                            <button class="btn-save" @onclick="GuardarCambioFecha" disabled="@Procesando">
                                @(Procesando ? "Guardando..." : "Guardar")
                            </button>
                            <button class="btn-cancel" @onclick="CerrarSubModal" disabled="@Procesando">Cancelar</button>
                        </div>
                        

                        <!-- Historial compacto con scroll -->
                        <label style="margin-top:8px;">Historial de cambios:</label>
                        <div class="historial-box">
                            @if (ActividadSeleccionada?.HistorialFechas != null && ActividadSeleccionada.HistorialFechas.Any())
                            {
                                <ul class="historial-list">
                                    @foreach (var h in ActividadSeleccionada.HistorialFechas.OrderByDescending(x => x.FechaMovimiento))
                                    {
                                        <li>
                                            <div class="hist-row">
                                                <div> Cambiado el: @(h.FechaMovimiento.ToString("yyyy-MM-dd") ?? "—")</div>
                                                <div>De: @(h.FechaAnterior.ToString("yyyy-MM-dd") ?? "—")</div>
                                                <div> A: @(h.FechaNueva.ToString("yyyy-MM-dd") ?? "—")</div>
                                                <div>Motivo: @h.Motivo</div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="muted">No hay cambios registrados.</div>
                            }
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
}
@code {
