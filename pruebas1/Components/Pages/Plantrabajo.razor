@if (ShowModal)
{
    <div class="overlay" @onclick="CloseModal">
        <div class="modal large" @onclick:stopPropagation="true">
            <h3 class="modal-title">@ModalEmpresa</h3>

            @foreach (var servicio in ServiciosModal)
            {
                <h4 class="service-subtitle">
                    @servicio.NombreServicio
                </h4>

                <table class="activities-table">
                    <thead>
                        <tr>
                            <th>Actividad</th>
                            <th>Fecha</th>
                            <th>Modificar fecha</th>
                            <th>Minuta</th>
                            <th>Observaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var actividad in servicio.Actividades)
                        {
                            <tr>
                                <td>@actividad.Nombre</td>

                                <td>
                                    @if (actividad.Fecha.HasValue)
                                    {
                                        <input type="date"
                                               value="@actividad.Fecha.Value.ToString("yyyy-MM-dd")"
                                               class="input-date small"
                                               disabled
                                               title="La fecha solo puede modificarse desde el botón 📅" />
                                    }
                                    else
                                    {
                                        <DatePicker Value="actividad.Fecha"
                                                    ValueChanged="@(fecha => actividad.Fecha = fecha)"
                                                    CssClass="input-date small" />
                                    }
                                </td>

                                <td>
                                    <button class="btn-calendar"
                                            @onclick="() => AbrirSubModal(actividad)">
                                        📅
                                    </button>
                                </td>

                                <td class="check-cell">
                                    <input type="checkbox"
                                       class="form-check-input"
                                       checked="@actividad.Minuta"
                                       @onchange="async e => await OnMinutaChanged(actividad, e)" />

                                </td>

                                <td>
                                    <textarea class="input-text"
                                              value="@actividad.Observaciones"
                                              @onchange="async e => await OnObservacionesChanged(actividad, e)">
                                      </textarea>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            <div class="modal-footer">
                <button class="btn-save" @onclick="GuardarActividades">Guardar</button>
                <button class="btn-cancel" @onclick="CloseModal">Cerrar</button>
            </div>

            @if (ShowSubModal)
            {
                <div class="submodal-overlay" @onclick="CerrarSubModal">
                    <div class="submodal" @onclick:stopPropagation="true">
                        <h4>Modificar fecha para: @ActividadSeleccionada?.Nombre</h4>

                        <!-- Fecha actual (no editable) -->
                        <label>Fecha actual (no editable):</label>
                        <input type="date" value="@(OriginalFecha?.ToString("yyyy-MM-dd") ?? String.Empty)" disabled class="input-date" />

                        <!-- Nueva fecha (obligatoria) -->
                        <label>Selecciona nueva fecha <span class="required">*</span>:</label>
                        <DatePicker Value="NuevaFecha"
                                    ValueChanged="@(fecha => NuevaFecha = fecha)"
                                    CssClass="form-control" />

                        @if (MostrarErrorFecha)
                        {
                            <div class="error-msg">La nueva fecha es obligatoria.</div>
                        }

                        <!-- Motivo del cambio (obligatorio) -->
                        <label>Motivo del cambio <span class="required">*</span>:</label>
                        <textarea @bind="MotivoCambio" class="input-text"></textarea>
                        @if (MostrarErrorMotivo)
                        {
                            <div class="error-msg">El motivo es obligatorio.</div>
                        }

                        <div class="modal-footer">
                            <button class="btn-save" @onclick="GuardarCambioFecha">Guardar</button>
                            <button class="btn-cancel" @onclick="CerrarSubModal">Cancelar</button>
                        </div>

                        <!-- Historial compacto con scroll -->
                        <label style="margin-top:8px;">Historial de cambios:</label>
                        <div class="historial-box">
                            @if (ActividadSeleccionada?.HistorialFechas != null && ActividadSeleccionada.HistorialFechas.Any())
                            {
                                <ul class="historial-list">
                                    @foreach (var h in ActividadSeleccionada.HistorialFechas.OrderByDescending(x => x.FechaMovimiento))
                                    {
                                        <li>
                                            <div class="hist-row">
                                                <div><strong>@(h.FechaMovimiento.ToString("g"))</strong></div>
                                                <div>De: @(h.FechaAnterior?.ToString("yyyy-MM-dd") ?? "—")</div>
                                                <div> A: @(h.FechaNueva?.ToString("yyyy-MM-dd") ?? "—")</div>
                                                <div>Motivo: @h.Motivo</div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="muted">No hay cambios registrados.</div>
                            }
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
}
@code {

    // Clase para historial de cambios
    public class CambioFecha
    {
        public DateTime? FechaAnterior { get; set; }
        public DateTime? FechaNueva { get; set; }
        public string Motivo { get; set; } = string.Empty;
        public DateTime FechaMovimiento { get; set; } = DateTime.Now;
    }

    public class Actividad
    {
        public int IdCheckListAsignacion { get; set; }
        public int IdActividadGeneral { get; set; }

        public string Nombre { get; set; } = string.Empty;
        public DateTime? Fecha { get; set; }
        public bool Minuta { get; set; } 
        public string? Observaciones { get; set; }

        public List<CambioFecha> HistorialFechas { get; set; } = new();
    }


    public class Empresa
    {
        public int IdUsuarioEntidadAgenda { get; set; }
        public string Nombre { get; set; } = string.Empty;
    }

    public class GrupoCliente
    {
        public string Nombre { get; set; } = string.Empty;
        public bool Expandido { get; set; }
        public List<Empresa> Empresas { get; set; } = new();
    }

    private List<GrupoCliente> GruposClientes { get; set; } = new();
    private List<Empresa> ClientesIndividuales { get; set; } = new();
    bool ShowSubModal = false;
    private bool ShowModal { get; set; }
    private string ModalEmpresa { get; set; } = string.Empty;
    private List<Actividad> Actividades { get; set; } = new();
    Actividad ActividadSeleccionada;
    private List<ServicioModal> ServiciosModal { get; set; } = new();

    public class ServicioModal
    {
        public string NombreServicio { get; set; } = string.Empty;
        public List<Actividad> Actividades { get; set; } = new();
    }

    // Campos para el submodal
    private DateTime? NuevaFecha { get; set; }
    private DateTime? OriginalFecha { get; set; }
    string MotivoCambio = "";

    // Validación
    bool MostrarErrorFecha = false;
    bool MostrarErrorMotivo = false;

    protected override async Task OnInitializedAsync()
    {
        var data = await ServicioClienteService.ObtenerMisEmpresas();

        GruposClientes = data.Grupos.Select(g => new GrupoCliente
        {
            Nombre = g.NombreGrupo,
            Empresas = g.Clientes.Select(c => new Empresa
            {
                IdUsuarioEntidadAgenda = c.IdUsuarioEntidadAgenda,
                Nombre = c.NombreCliente
            }).ToList()
        }).ToList();

        ClientesIndividuales = data.ClientesIndividuales.Select(c => new Empresa
        {
            IdUsuarioEntidadAgenda = c.IdUsuarioEntidadAgenda,
            Nombre = c.NombreCliente
        }).ToList();
    }



    private void ToggleGrupo(GrupoCliente grupo)
    {
        grupo.Expandido = !grupo.Expandido;
    }

    private async Task OpenModal(int idUsuarioEntidadAgenda)
    {
        ShowModal = true;
        ServiciosModal.Clear();

        var data = await ServicioClienteService.ObtenerActividadesEmpresa(idUsuarioEntidadAgenda);

        if (data == null)
        {
            ModalEmpresa = "Empresa sin actividades";
            return;
        }

        ModalEmpresa = data.NombreEmpresa;
        ServiciosModal = data.Servicios
            .Select(s => new ServicioModal
            {
                NombreServicio = s.NombreServicio,
                Actividades = s.Actividades
                    .OrderBy(a => a.IdActividadGeneral)
                    .Select(a => new Actividad
                    {
                        IdCheckListAsignacion = a.IdCheckListAsignacion,
                        IdActividadGeneral = a.IdActividadGeneral,
                        Nombre = a.NombreActividad,
                        Fecha = a.Fecha,
                        Minuta = a.Minuta ?? false,   
                        Observaciones = a.Observaciones
                    })
                    .ToList()
            })
            .ToList();

    }




    private void GuardarActividades()
    {
        ShowModal = false;
    }

    void AbrirSubModal(Actividad actividad)
    {
        ActividadSeleccionada = actividad;
        OriginalFecha = actividad.Fecha; // fecha actual (no editable)
        NuevaFecha = actividad.Fecha; // prellenamos con la fecha actual por conveniencia (puedes dejar null si prefieres)
        MotivoCambio = "";
        MostrarErrorFecha = false;
        MostrarErrorMotivo = false;
        ShowSubModal = true;
    }

    void CerrarSubModal()
    {
        ShowSubModal = false;
        ActividadSeleccionada = null;
        NuevaFecha = null;
        OriginalFecha = null;
        MotivoCambio = "";
        MostrarErrorFecha = false;
        MostrarErrorMotivo = false;
    }

    void CloseModal()
    {
        ShowModal = false;
        ShowSubModal = false;
        ActividadSeleccionada = null;
        NuevaFecha = null;
        OriginalFecha = null;
        MotivoCambio = "";
    }

    void GuardarCambioFecha()
    {
        MostrarErrorFecha = false;
        MostrarErrorMotivo = false;

        // Validaciones
        if (NuevaFecha == null)
        {
            MostrarErrorFecha = true;
        }

        if (string.IsNullOrWhiteSpace(MotivoCambio))
        {
            MostrarErrorMotivo = true;
        }

        if (MostrarErrorFecha || MostrarErrorMotivo)
        {
            return; // no guardamos hasta que todo esté correcto
        }

        if (ActividadSeleccionada != null)
        {
            // Añadimos registro al historial
            var cambio = new CambioFecha
            {
                FechaAnterior = OriginalFecha,
                FechaNueva = NuevaFecha,
                Motivo = MotivoCambio,
                FechaMovimiento = DateTime.Now
            };

            ActividadSeleccionada.HistorialFechas.Add(cambio);

            // Actualizamos la fecha de la actividad
            ActividadSeleccionada.Fecha = NuevaFecha;

            // Cerrar modal y limpiar
            ShowSubModal = false;
            ActividadSeleccionada = null;
            NuevaFecha = null;
            OriginalFecha = null;
            MotivoCambio = "";
        }
    }


    private async Task OnMinutaChanged(Actividad actividad, ChangeEventArgs e)
{
    actividad.Minuta = (bool)e.Value!;

    if (actividad.Fecha == null)
        return; // No se guarda sin fecha

    await ServicioClienteService.GuardarFechaYMinutaAsync(
        new HorasProgramaTrabajoUpsertDTO
        {
            IdAsignacion = actividad.IdCheckListAsignacion,
            Fecha = actividad.Fecha.Value,
            Minuta = actividad.Minuta
        }
    );
}

    private async Task OnFechaChanged(Actividad actividad, DateTime? fecha)
    {
        actividad.Fecha = fecha;

        if (fecha == null)
            return;

        await ServicioClienteService.GuardarFechaYMinutaAsync(
            new HorasProgramaTrabajoUpsertDTO
            {
                IdAsignacion = actividad.IdCheckListAsignacion,
                Fecha = fecha.Value,
                Minuta = actividad.Minuta
            }
        );
    }

    private async Task OnObservacionesChanged(Actividad actividad, ChangeEventArgs e)
        {
            actividad.Observaciones = e.Value?.ToString();

            await ServicioClienteService.GuardarObservacionesAsync(
                actividad.IdCheckListAsignacion,
                actividad.Observaciones
            );
        }

}

