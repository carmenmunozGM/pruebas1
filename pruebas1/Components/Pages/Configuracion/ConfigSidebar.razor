                    <line x1="8" y1="14" x2="16" y2="14"></line>
                    <line x1="12" y1="14" x2="12" y2="18"></line>
                </svg>
                <span>Días Inhábiles</span>
            </button>

            <button class="nav-item @(CurrentSection == "perfiles" ? "active" : "")" 
                    @onclick='() => OnSectionChange.InvokeAsync("perfiles")'>
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="8.5" cy="7" r="4"></circle>
                    <polyline points="17 11 19 13 23 9"></polyline>
                </svg>
                <span>Perfiles</span>
            </button>
        </nav>
    </div>
</aside>

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public string CurrentSection { get; set; } = "";
    [Parameter] public EventCallback<string> OnSectionChange { get; set; }
}
