<div class="action-button-wrapper">
    <button class="action-button-floating" @onclick="@OpenModal">➕ Crear Nueva Actividad</button>
</div>


@if (ShowModal)
{
    <div class="backdrop-overlay" @onclick="CheckClose">
        <div class="task-modal-card" @onclick:stopPropagation="true">

            <div class="task-modal-header">
                <h2 class="header-title">🌟 Crea tu nueva actividad</h2>
                <span class="close-btn" @onclick="CheckClose">&times;</span>
            </div>

            <div class="task-modal-body">

                <!-- Tipo -->
                <div class="activity-type-selector">
                    <button @onclick="() => SetFormType(FormTypes.Tareas)"
                            class="@(FormType == FormTypes.Tareas ? "type-btn active-type-btn" : "type-btn")">
                        ✅ Tarea
                    </button>

                    <button @onclick="() => SetFormType(FormTypes.Evento)"
                            class="@(FormType == FormTypes.Evento ? "type-btn active-type-btn" : "type-btn")">
                        🗓️ Evento - Reunión
                    </button>
                </div>

                <div class="main-form-grid">

                    <!-- Título -->
                    <div class="form-control-group col-span-2">
                        <label>🏷️Título / Nombre *</label>
                        <InputText class="form-control" @bind-Value="titulo" />
                    </div>

                    <!-- Prioridad -->
                    <div class="form-control-group">
                        <label>⚡Prioridad</label>
                        <select class="form-input" @bind="selectedPrioridadId">
                            <option value="">Seleccione...</option>
                            @foreach (var p in prioridadesDisponibles)
                            {
                                <option value="@p.Id">@p.Titulo</option>
                            }
                        </select>
                    </div>

                    <!-- Recurrencia -->
                    <div class="form-control-group">
                        <label>🔁 Recurrencia</label>
                        <select class="form-input" @bind="selectedFrecuenciaId">
                            <option value="">Seleccione...</option>
                            @foreach (var f in frecuencias)
                            {
                                <option value="@f.Id">@f.Descripcion</option>
                            }
                        </select>

                    </div>

                    <!-- Fecha inicio -->
                     <div class="date-time-group">
                        <div class="form-control-group">
                            <label>🗓️ Fecha Inicio</label>
                         @*    <DatePicker @bind-Value="FechaInicio" CssClass="form-control" /> *@
                             <DatePicker Value="FechaInicio"
                                ValueChanged="async v =>
                                        {
                                    FechaInicio = v;
                                            await OnCambioHorarioAsync();
                                }"
                                  CssClass="form-control" />

                        </div>
                    </div>
 
  
                    <!-- Hora inicio -->
                    <div class="form-control-group @(FormType != FormTypes.Evento ? "disabled-field-if-tarea" : "")">
                        <label>🕒Hora Inicio</label>
                       @*  <input type="time" class="form-input time-control"
                               @bind="HoraInicio" @bind:event="oninput" /> *@
                        <input type="time"
                               class="form-input time-control"
                               @bind="HoraInicio"
                               @bind:after="ValidarSalaAsync" />


                    </div> 
                    

                    <!-- Fecha fin -->
                    <div class="date-time-group">
                        <div class="form-control-group">
                            <label>🗓️ Fecha Término</label>
                            @* <DatePicker @bind-Value="FechaFin" CssClass="form-control" /> *@
                            <DatePicker Value="FechaFin"
                                ValueChanged="async v =>
                                        {
                                    FechaFin = v;
                                            await OnCambioHorarioAsync();
                                }"
                                  CssClass="form-control" />
                        </div>
                    </div> 
                    
                  <!-- Hora fin -->
                    <div class="form-control-group @(FormType != FormTypes.Evento ? "disabled-field-if-tarea" : "")">
                        <label>🕒Hora Término</label>
                       @*  <input type="time" class="form-input time-control"
                               @bind="HoraFin" @bind:event="oninput" /> *@
                        <input type="time"
                               class="form-input time-control"
                               @bind="HoraFin"
                               @bind:after="ValidarSalaAsync" />

                    </div> 
          
                    <!-- Ubicación -->
                    <div class="form-control-group col-span-2 @(FormType != FormTypes.Evento ? "disabled-field-if-tarea" : "")">
                        <label>📍 Ubicación</label>
                        <select class="form-control"
                                value="@selectedSalaId"
                                @onchange="async e =>
                                {
                                    selectedSalaId = int.Parse(e.Value.ToString());
                                    OnSalaChanged();
                                    await OnCambioHorarioAsync();
                                }">


                            <option value="0">Selecciona una sala</option>

                            @foreach (var sala in listaSalas)
                            {
                                <option value="@sala.Id">@sala.Salas</option>
                            }

                            <option value="-1">Otro...</option>
                        </select>
                        @if (SalaOcupada)
                        {
                            <div class="alert alert-warning mt-2">
                                ⚠️ Esta sala ya tiene un evento en ese horario.
                            </div>
                        }

                        @if (mostrarOtraUbicacion)
                        {
                            <input class="form-control mt-2"
                                   placeholder="Escribe la ubicación"
                                   @bind="ubicacionOtra" />
                        }
                       

                    </div>

                    <!-- Participantes -->
                    <div class="form-control-group col-span-2 @(FormType != FormTypes.Evento ? "disabled-field-if-tarea" : "")">
                        <label>👥Participantes</label>

                        <div class="autocomplete-container">

                            <!-- Chips -->
                            <div class="chips-container">
                                @foreach (var p in participantesSeleccionados)
                                {
                                    <div class="chip">
                                        @p.Nombre (@p.ClavePersonal)
                                        <span class="chip-remove" @onclick="() => QuitarParticipante(p)">×</span>
                                    </div>
                                }

                                <!-- Input -->
                                <input type="text"
                                       class="chip-input"
                                       placeholder="Agregar participante..."
                                       value="@searchText"
                                       @oninput="FiltrarEmpleados"
                                       disabled="@(FormType != FormTypes.Evento)" />
                            </div>

                            <!-- Lista Autocomplete -->
                            @if (mostrarLista && empleadosFiltrados?.Count > 0)
                            {
                                <ul class="autocomplete-list">
                                    @foreach (var emp in empleadosFiltrados)
                                    {
                                        <li @onclick="() => AgregarParticipante(emp)">
                                            <strong>@emp.Nombre</strong> — @emp.ClavePersonal<br />
                                            <small>@emp.Puesto — @emp.Area</small>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>

                    <!-- Descripción -->
                    <div class="form-control-group col-span-2">
                        <label>📝Descripción / Detalles</label>
                        <InputTextArea class="form-control" @bind-Value="descripcion" />
                    </div>

                    <!-- Subtareas -->
                    <div class="form-control-group col-span-2 @(FormType == FormTypes.Evento ? "disabled-field" : "")">
                        <label>✅Checklist / Sub Tareas</label>

                        <div class="input-with-button-group">
                            <input @bind="newSubtask" @onkeydown="AddSubtaskOnEnter"
                                   class="form-input" placeholder="Añadir paso a la checklist"
                                   disabled="@(FormType == FormTypes.Evento)" />

                            <button class="btn btn-add"
                                    @onclick="AddSubtask"
                                    disabled="@(FormType == FormTypes.Evento)">
                                Añadir
                            </button>
                        </div>

                        <div class="checklist-list-wrapper">
                            <ul class="checklist-list">
                                @foreach (var task in subtasks)
                                {
                                    <li class="checklist-item">
                                        <span class="checklist-text">@task</span>
                                        <button class="delete-checklist-item" @onclick="() => RemoveSubtask(task)">🗑️</button>
                                    </li>
                                }
                        </ul>
                    </div>
                </div>

                </div>

                <script>
                    window.alertaGuardadoEvento = function () {
                        Swal.fire({
                            icon: 'success',
                            title: 'Guardado con éxito 🎉',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            Swal.fire({
                                icon: 'info',
                                title: 'No se te olvide registrarlo en RED GM',
                                text: 'Verifica en Red GM este evento',
                                confirmButtonText: 'Entendido'
                            });
                        });
                    }

                    window.alertaGuardadoSimple = function () {
                        Swal.fire({
                            icon: 'success',
                            title: 'Guardado con éxito 🎉',
                            confirmButtonText: 'OK'
                        });
                    }
                </script>

                @if (erroresFormulario.Any())
                {
                    <div class="alert alert-danger">
                        <strong>❌ Faltan campos obligatorios:</strong>
                        <ul class="mb-0">
                            @foreach (var err in erroresFormulario)
                            {
                                <li>@err</li>
                            }
                        </ul>
                    </div>
                }

                <!-- Footer -->
                <div class="task-modal-footer">
                    <button class="btn btn-secondary-action" @onclick="CheckClose">Cancelar</button>
                    @* <button class="btn btn-primary-action" @onclick="Guardar">Guardar Actividad</button> *@
                    <button class="btn btn-primary-action"
                            @onclick="Guardar"
                            disabled="@SalaOcupada">
                        Guardar Actividad
                    </button>


                </div>

            </div>

        </div>
    </div>


