            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(0, 0, 0, 0.3);
            border-block-color:black;
        }

    /* === Contenedor principal del Modal (Fondo Oscuro) === */
    .backdrop-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.55);
        display: flex;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(4px);
        z-index: 1000;
        padding: 20px;
    }

    /* === Tarjeta Modal === */
    .task-modal-card {
        width: 95%;
        max-width: 950px;
        background: #fff;
        border-radius: 16px;
        display: flex;
        flex-direction: column;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
        overflow: hidden;
        animation: scaleIn 0.3s ease-out;
        max-height: 90vh;
    }

    /* Animación de entrada */
    @@keyframes scaleIn {
        from {
            transform: scale(0.9);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }

    /* === Encabezado === */
    .task-modal-header {
        background: var(--color-primary);
        color: #fff;
        padding: 16px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 3px solid var(--color-secondary); /* Acento de color */
    }

    .header-title {
        font-size: 1.4rem;
        font-weight: 700;
        margin: 0;
    }

    .close-btn {
        font-size: 2rem;
        font-weight: bold;
        cursor: pointer;
        transition: transform 0.2s ease, color 0.2s ease;
        line-height: 1;
        opacity: 0.8;
    }

        .close-btn:hover {
            color: var(--color-secondary); /* Color suave para hover */
            transform: rotate(90deg) scale(1.1);
            opacity: 1;
        }

    /* === Cuerpo del Formulario === */
    .task-modal-body {
        padding: 20px 25px;
        background: var(--color-background-light);
        flex: 1;
        overflow-y: auto;
    }

    /* === Selector de Tipo de Actividad === */
    .activity-type-selector {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
        background: #e9ecef; /* Fondo sutil para el selector */
        padding: 5px;
        border-radius: 10px;
    }

    .type-btn {
        flex: 1;
        padding: 10px 15px;
        border-radius: 8px;
        border: none;
        background: transparent;
        font-weight: 600;
        font-size: 1rem;
        color: var(--color-text-dark);
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: none;
    }

        .type-btn:hover {
            background: #dcdcdc; /* Gris de hover */
        }

    .active-type-btn {
        background: #fff;
        color: var(--color-primary);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        border: 2px solid var(--color-secondary); /* Borde para indicar activo */
        transform: translateY(-1px);
    }

    /* === Estructura del Formulario (Grid) === */
    .main-form-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 15px;
    }

    .col-span-2 {
        grid-column: span 2;
    }

    .date-time-group {
        grid-column: span 4;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 15px;
    }

    .btn btn-secondary-action{

    }
