@page "/modal-optimizado"
@using Microsoft.AspNetCore.Components.Web

@using System.Globalization;
@using Microsoft.JSInterop;

@inject ReglasRecurrenciaServices RecurreciaServices
@using pruebas1.Entidades
@using pruebas1.Servicios
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
@inject IJSRuntime JSRuntime

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="/js/alerts.js"></script>

<div class="btn-container">
    <button class="btn-floating" @onclick="@OpenModal">➕ Crear Nuevo</button>
</div>


@if (ShowModal)
{
    <div class="reusable-modal-container" @onclick="CheckClose">
        <div class="modal-content" @onclick:stopPropagation="true">

            <!-- Header -->
            <div class="reusable-modal-header">
                <h2 class="modal-title">📝Crear Nuevo</h2>
                <span class="close-button" @onclick="CheckClose">&times;</span>
            </div>

            <!-- Body -->
            <div class="reusable-modal-body-wrapper">

                <!-- Selector de tipo -->
                <div class="form-type-selector-horizontal">
                    <button @onclick="() => SetFormType(FormTypes.Tarea)" class="@(FormType == FormTypes.Tarea ? "active" : "")">✅ Tarea Operativa</button>
                    <button @onclick="() => SetFormType(FormTypes.Administrativa)" class="@(FormType == FormTypes.Administrativa ? "active" : "")">💼 Tarea Administrativa</button>
                    <button @onclick="() => SetFormType(FormTypes.Evento)" class="@(FormType == FormTypes.Evento ? "active" : "")">🗓️ Evento- TA</button>
                </div>

                <!-- Formulario -->
                <div class="form-section">

                    <div class="form-group-span-2">
                        <label>Título / Nombre</label>
                        <input type="text" class="form-control" placeholder="Ej: Reunión Semanal de Proyecto" @bind="titulo" />
                    </div>

                    <div class="form-group-inline">
                        <div class="form-group">
                            <label>Prioridad</label>
                            <select class="form-control priority-select" @bind="selectedPrioridadId">
                                @if (prioridadesDisponibles == null || !prioridadesDisponibles.Any())
                                {
                                    <option disabled>Cargando...</option>
                                }
                                else
                                {
                                    @foreach (var p in prioridadesDisponibles)
                                    {
                                        <option value="@p.Id">@p.Titulo</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Recurrencia</label>
                            <select class="form-control" @bind="selectedFrecuenciaId">
                                @if (frecuencias == null || !frecuencias.Any())
                                {
                                    <option disabled>Cargando...</option>
                                }
                                else
                                {
                                    @foreach (var f in frecuencias)
                                    {
                                        <option value="@f.Id">@f.Descripcion</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group-inline">
                        <div class="inline-control-group">
                            <label>Fecha inicio</label>
                            <InputDate @bind-Value="fechaInicio" class="form-control" />

                        </div>

                        <div class="inline-control-group @(FormType != FormTypes.Evento ? "disabled-group" : "")">
                            <label>Hora inicio</label>
                            <input type="time" class="form-control" disabled="@(FormType != FormTypes.Evento)" />
                        </div>
                        <div class="inline-control-group">
                            <label>Fecha término</label>
                            <input type="text" class="form-control" placeholder="dd/mm/yyyy"
                                   @bind="fechaTerminoTexto" />
                        </div>
                        <div class="inline-control-group @(FormType != FormTypes.Evento ? "disabled-group" : "")">
                            <label>Hora término</label>
                            <input type="time" class="form-control" disabled="@(FormType != FormTypes.Evento)" />
                        </div>
                    </div>

                    <div class="form-group @(FormType != FormTypes.Evento ? "disabled-group" : "")">
                        <label>Ubicación</label>
                        <select class="form-control" @onchange="HandleLocationChange" disabled="@(FormType != FormTypes.Evento)">
                            <option value="">Seleccione una opción</option>
                            <option>Grupo Industrial</option>
                            <option>Textil Gitsa</option>
                            <option>Duramil</option>
                            <option>Comedor GM</option>
                            <option>Deverona</option>
                            <option>El Reloj</option>
                            <option>Meeting</option>
                            <option>Virtual 1</option>
                            <option>Virtual 2</option>
                            <option value="otra">Otra...</option>
                        </select>

                        @if (showOtherLocationInput && FormType == FormTypes.Evento)
                        {
                            <input type="text" class="form-control mt-2" placeholder="Ingrese otra ubicación" />
                        }
                    </div>

                    <div class="form-group @(FormType != FormTypes.Evento ? "disabled-group" : "")">
                        <label>Participantes</label>
                        <input type="text" class="form-control" placeholder="Asistentes o invitados..." disabled="@(FormType != FormTypes.Evento)" />
                    </div>

                    <div class="form-group-span-2">
                        <label>Descripción</label>
                        <textarea class="form-control tall-textarea" placeholder="Escriba los detalles aquí..." @bind="descripcion"></textarea>
                    </div>

                    <!-- Subtareas habilitadas para Tarea y Administrativa -->
                    <div class="form-group-span-2 @(FormType == FormTypes.Evento ? "disabled-group" : "")">
                        <label>Sub Tareas</label>
                        <div class="input-group">
                            <input @bind="newSubtask" @onkeydown="AddSubtaskOnEnter" class="form-control" placeholder="Añadir nueva sub-tarea" disabled="@(FormType == FormTypes.Evento)" />
                            <button class="btn btn-secondary" @onclick="AddSubtask" disabled="@(FormType == FormTypes.Evento)">Añadir</button>
                        </div>
                        <div class="subtasks-container">
                            <ul class="todo-list">
                                @foreach (var task in subtasks)
                                {
                                    <li>
                                        <span>@task</span>
                                        <button class="delete-button" @onclick="() => RemoveSubtask(task)">🗑️</button>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <button class="btn btn-danger" @onclick="CheckClose">Cancelar</button>
                <button class="btn btn-success" @onclick="CheckSave">Guardar</button>
            </div>
        </div>
    </div>
}


@code {
    private List<FrecuenciaRecurrencia> frecuencias = new();
    private List<Prioridad> prioridadesDisponibles = new();
    private List<PlantillaReglaRecurrencia> plantillas = new();
    private int? selectedPrioridadId;
    private int? selectedFrecuenciaId;

    var culture = new CultureInfo("es-ES");
    CultureInfo.DefaultThreadCurrentCulture = culture;
CultureInfo.DefaultThreadCurrentUICulture = culture;

    private bool ShowModal { get; set; } = false;
    public enum FormTypes { Evento, Tarea, Administrativa }
    public FormTypes FormType { get; set; } = FormTypes.Administrativa;
    private string newSubtask = string.Empty;
    private List<string> subtasks = new();
    public bool showOtherLocationInput { get; set; } = false;

    private string titulo = string.Empty;
    private string descripcion = string.Empty;

    // Evento para notificar al padre
    [Parameter] public EventCallback<TareaCreada> OnSave { get; set; }

    private void OpenModal()
    {
        LimpiarCampos();
        ShowModal = true;
    }

    private void CheckClose()
    {
        LimpiarCampos();
        ShowModal = false;
    }
    private DateTime fechaInicio = DateTime.Now;
    private DateTime fechaTermino = DateTime.Now;

    private string fechaInicioTexto
    {
        get => fechaInicio.ToString("dd/MM/yyyy");
        set
        {
            if (DateTime.TryParseExact(value, "dd/MM/yyyy", null, System.Globalization.DateTimeStyles.None, out var dt))
                fechaInicio = dt;
        }
    }

    private string fechaTerminoTexto
    {
        get => fechaTermino.ToString("dd/MM/yyyy");
        set
        {
            if (DateTime.TryParseExact(value, "dd/MM/yyyy", null, System.Globalization.DateTimeStyles.None, out var dt))
                fechaTermino = dt;
        }
    }
    private async Task CheckSave()
    {
        if (string.IsNullOrWhiteSpace(titulo))
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire", new
            {
                icon = "warning",
                title = "Falta el título",
                text = "Por favor escribe un título o nombre antes de guardar."
            });
            return;
        }

        var nuevaTarea = new TareaCreada
        {
            Tipo = FormType.ToString(),
            Titulo = titulo,
            Descripcion = descripcion,
            Subtareas = subtasks.ToList()
        };

        await OnSave.InvokeAsync(nuevaTarea);

        await JSRuntime.InvokeVoidAsync("Swal.fire", new
        {
            icon = "success",
            title = $"{FormType} creada exitosamente 🎉",
            showConfirmButton = false,
            timer = 1800
        });

        LimpiarCampos();
        ShowModal = false;
    }

    private void LimpiarCampos()
    {
        titulo = string.Empty;
        descripcion = string.Empty;
        newSubtask = string.Empty;
        subtasks.Clear();
        showOtherLocationInput = false;
        FormType = FormTypes.Administrativa;
        selectedPrioridadId = null;
        selectedFrecuenciaId = null;
    }

    private void SetFormType(FormTypes type)
    {
        FormType = type;
        showOtherLocationInput = false;
        if (type == FormTypes.Evento) subtasks.Clear();
        StateHasChanged();
    }

    private void HandleLocationChange(ChangeEventArgs e) =>
        showOtherLocationInput = e.Value?.ToString() == "otra";

    private void AddSubtask()
    {
        if (!string.IsNullOrWhiteSpace(newSubtask))
        {
            subtasks.Add(newSubtask.Trim());
            newSubtask = string.Empty;
        }
    }

    private void AddSubtaskOnEnter(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") AddSubtask();
    }

    private void RemoveSubtask(string taskToRemove) => subtasks.Remove(taskToRemove);

    // Modelo que enviará al padre
    public class TareaCreada
    {
        public string Tipo { get; set; }
        public string Titulo { get; set; }
        public string Descripcion { get; set; }
        public List<string> Subtareas { get; set; } = new();
    }

    protected override async Task OnInitializedAsync()
    {
        prioridadesDisponibles = await RecurreciaServices.GetPrioridad();
        frecuencias = await RecurreciaServices.GetFrecuencia();

        Console.WriteLine($"Prioridades: {prioridadesDisponibles.Count}");
        foreach (var p in prioridadesDisponibles) Console.WriteLine(p.Titulo);

        Console.WriteLine($"Frecuencias: {frecuencias.Count}");
        foreach (var f in frecuencias) Console.WriteLine(f.Nombre);
    }


}



