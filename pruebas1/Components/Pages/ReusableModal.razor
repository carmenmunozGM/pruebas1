@page "/modal-optimizado"
@using Microsoft.AspNetCore.Components.Web
@using System.Globalization;
@using Microsoft.JSInterop
@inject ReglasRecurrenciaServices RecurreciaServices
@using pruebas1.Entidades
@using pruebas1.Servicios
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
@inject IJSRuntime JSRuntime

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="/js/alerts.js"></script>

<div class="action-button-wrapper">
    <button class="action-button-floating" @onclick="@OpenModal">➕ Crear Nueva Actividad</button>
</div>

@if (ShowModal)
{
    <div class="backdrop-overlay" @onclick="CheckClose">
        <div class="task-modal-card" @onclick:stopPropagation="true">

            <div class="task-modal-header">
                <h2 class="header-title">🌟 Crea tu nueva actividad</h2>
                <span class="close-btn" @onclick="CheckClose">&times;</span>
            </div>

            <div class="task-modal-body">

                <div class="activity-type-selector">
                    <button @onclick="() => SetFormType(FormTypes.Administrativa)"
                            class="@(FormType == FormTypes.Administrativa ? "type-btn active-type-btn" : "type-btn")">
                        ✅ Tarea
                    </button>
                    <button @onclick="() => SetFormType(FormTypes.Evento)"
                            class="@(FormType == FormTypes.Evento ? "type-btn active-type-btn" : "type-btn")">
                        🗓️ Evento - Reunión
                    </button>
                </div>

                <div class="main-form-grid">

                    <div class="form-control-group col-span-2">
                        <label for="title-input">Título / Nombre *</label>
                        <input id="title-input" type="text" class="form-input" placeholder="Ej: Reporte Mensual de Ventas" @bind="titulo" />
                    </div>

                    <div class="form-control-group">
                        <label>Prioridad</label>
                        <select class="form-input" @bind="selectedPrioridadId">
                            @if (prioridadesDisponibles == null || !prioridadesDisponibles.Any())
                            {
                                <option disabled>Cargando...</option>
                            }
                            else
                            {
                                @foreach (var p in prioridadesDisponibles)
                                {
                                    <option value="@p.Id">@p.Titulo</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-control-group">
                        <label>Recurrencia</label>
                        <select class="form-input" @bind="selectedFrecuenciaId">
                            @if (frecuencias == null || !frecuencias.Any())
                            {
                                <option disabled>Cargando...</option>
                            }
                            else
                            {
                                @foreach (var f in frecuencias)
                                {
                                    <option value="@f.Id">@f.Descripcion</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="date-time-group">
                        <div class="form-control-group">
                            <label>🗓️ Fecha Inicio (dd/mm/aaaa)</label>
                            <InputDate @bind-Value="NuevaFecha"
                                       class="form-input date-control"
                                       Culture="@(new CultureInfo("es-MX"))" />
                        </div>

                        <div class="form-control-group">
                            <label>Hora Inicio</label>
                            @* Se mantiene InputDate para la hora, pero se recomienda usar InputTime si Blazor lo soporta bien o input type="time" *@
                            <input type="time" class="form-input time-control" />
                        </div>

                        <div class="form-control-group">
                            <label>🗓️ Fecha Inicio (dd/mm/aaaa)</label>
                            <input type="text" class="form-input" placeholder="dd/mm/yyyy" @bind="fechaTerminoTexto" />
                        </div>

                        <div class="form-control-group">
                            <label>Hora Término</label>
                            <input type="time" class="form-input time-control" />
                        </div>
                    </div>

                    <div class="form-control-group col-span-2 @(FormType != FormTypes.Evento ? "disabled-field-if-tarea" : "")">
                        <label>Ubicación</label>
                        <select class="form-input" @onchange="HandleLocationChange" disabled="@(FormType != FormTypes.Evento)">
                            <option value="">Seleccione una opción</option>
                            <option>Grupo Industrial</option>
                            <option>Textil Gitsa</option>
                            <option>Duramil</option>
                            <option>Comedor GM</option>
                            <option>Deverona</option>
                            <option>El Reloj</option>
                            <option>Meeting</option>
                            <option>Virtual 1</option>
                            <option>Virtual 2</option>
                            <option value="otra">Otra...</option>
                        </select>

                        @if (showOtherLocationInput && FormType == FormTypes.Evento)
                        {
                            <input type="text" class="form-input mt-2" placeholder="Ingrese otra ubicación específica" />
                        }
                    </div>

                    <div class="form-control-group col-span-2 @(FormType != FormTypes.Evento ? "disabled-field-if-tarea" : "")">
                        <label>Participantes</label>
                        <input type="text" class="form-input" placeholder="Nombre o correo de asistentes..." disabled="@(FormType != FormTypes.Evento)" />
                    </div>

                    <div class="form-control-group col-span-2">
                        <label>Descripción / Detalles</label>
                        <textarea class="form-input large-textarea" placeholder="Escriba los detalles, agenda o notas importantes aquí..." @bind="descripcion"></textarea>
                    </div>

                    <div class="form-control-group col-span-2 @(FormType == FormTypes.Evento ? "disabled-field" : "")">
                        <label>✅ Checklist / Sub Tareas</label>
                        <div class="input-with-button-group">
                            <input @bind="newSubtask" @onkeydown="AddSubtaskOnEnter" class="form-input" placeholder="Añadir paso a la checklist" disabled="@(FormType == FormTypes.Evento)" />
                            <button class="btn btn-add" @onclick="AddSubtask" disabled="@(FormType == FormTypes.Evento)">Añadir</button>
                        </div>
                        <div class="checklist-list-wrapper">
                            <ul class="checklist-list">
                                @foreach (var task in subtasks)
                                {
                                    <li class="checklist-item">
                                        <span class="checklist-text">@task</span>
                                        <button class="delete-checklist-item" @onclick="() => RemoveSubtask(task)">🗑️</button>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="task-modal-footer">
                <button class="btn btn-secondary-action" @onclick="CheckClose">Cancelar</button>
                <button class="btn btn-primary-action" @onclick="CheckSave">Guardar Actividad</button>
            </div>
        </div>
    </div>
}

@code {

    private List<FrecuenciaRecurrencia> frecuencias = new();
    private List<Prioridad> prioridadesDisponibles = new();
    private List<PlantillaReglaRecurrencia> plantillas = new();
    private int? selectedPrioridadId;
    private int? selectedFrecuenciaId;
    public DateTime? NuevaFecha { get; set; }
    private DateTime fechaInicio = DateTime.Today;
    private DateTime fechaTermino = DateTime.Today;

    private readonly CultureInfo EsMxCulture = new("es-MX");
    private bool ShowModal { get; set; } = false;
    private DateTime FechaSeleccionada { get; set; } = DateTime.Now;

    protected override void OnInitialized()
    {
        var cultura = new System.Globalization.CultureInfo("es-MX");
        System.Globalization.CultureInfo.CurrentCulture = cultura;
        System.Globalization.CultureInfo.CurrentUICulture = cultura;

    }
    // Solo dos tipos ahora: Evento y Administrativa
    public enum FormTypes { Evento, Administrativa }
    public FormTypes FormType { get; set; } = FormTypes.Administrativa;

    private string newSubtask = string.Empty;
    private List<string> subtasks = new();
    public bool showOtherLocationInput { get; set; } = false;

    private string titulo = string.Empty;
    private string descripcion = string.Empty;

    // Evento para notificar al padre
    [Parameter] public EventCallback<TareaCreada> OnSave { get; set; }

    private void OpenModal()
    {
        LimpiarCampos();
        ShowModal = true;
    }

    private void CheckClose()
    {
        LimpiarCampos();
        ShowModal = false;
    }


    private string fechaInicioTexto
    {
        get => fechaInicio.ToString("dd/MM/yyyy");
        set
        {
            if (DateTime.TryParseExact(value, "dd/MM/yyyy", null, System.Globalization.DateTimeStyles.None, out var dt))
                fechaInicio = dt;
        }
    }

    private string fechaTerminoTexto
    {
        get => fechaTermino.ToString("dd/MM/yyyy");
        set
        {
            if (DateTime.TryParseExact(value, "dd/MM/yyyy", null, System.Globalization.DateTimeStyles.None, out var dt))
                fechaTermino = dt;
        }
    }
    private async Task CheckSave()
    {
        if (string.IsNullOrWhiteSpace(titulo))
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire", new
            {
                icon = "warning",
                title = "Falta el título",
                text = "Por favor escribe un título o nombre antes de guardar."
            });
            return;
        }

        // Si es Evento, lo guardamos dentro de Tareas Administrativas
        var tipoParaPadre = "Administrativa"; // siempre "Administrativa" para que el padre lo ponga en esa categoría
        var nuevaTarea = new TareaCreada
        {
            Tipo = tipoParaPadre,
            Titulo = titulo,
            Descripcion = descripcion,
            Subtareas = FormType == FormTypes.Evento ? new List<string>() : subtasks.ToList(),
            IsEvento = FormType == FormTypes.Evento
        };

        await OnSave.InvokeAsync(nuevaTarea);

        await JSRuntime.InvokeVoidAsync("Swal.fire", new
        {
            icon = "success",
            title = $"{(FormType == FormTypes.Evento ? "Evento" : "Tarea administrativa")} creada exitosamente 🎉",
            showConfirmButton = false,
            timer = 1800
        });

        LimpiarCampos();
        ShowModal = false;
    }

    private void LimpiarCampos()
    {
        titulo = string.Empty;
        descripcion = string.Empty;
        newSubtask = string.Empty;
        subtasks.Clear();
        showOtherLocationInput = false;
        FormType = FormTypes.Administrativa;
        selectedPrioridadId = null;
        selectedFrecuenciaId = null;
    }

    private void SetFormType(FormTypes type)
    {
        FormType = type;
        showOtherLocationInput = false;
        if (type == FormTypes.Evento) subtasks.Clear();
        StateHasChanged();
    }

    private void HandleLocationChange(ChangeEventArgs e) =>
        showOtherLocationInput = e.Value?.ToString() == "otra";

    private void AddSubtask()
    {
        if (!string.IsNullOrWhiteSpace(newSubtask))
        {
            subtasks.Add(newSubtask.Trim());
            newSubtask = string.Empty;
        }
    }

    private void AddSubtaskOnEnter(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") AddSubtask();
    }

    private void RemoveSubtask(string taskToRemove) => subtasks.Remove(taskToRemove);

    // Modelo que enviará al padre
    public class TareaCreada
    {
        public string Tipo { get; set; } // siempre "Administrativa" (para que se guarde en esa categoría)
        public string Titulo { get; set; }
        public string Descripcion { get; set; }
        public List<string> Subtareas { get; set; } = new();
        public bool IsEvento { get; set; } = false; // para que el padre distinga si lo que llegó es un evento
    }

    protected override async Task OnInitializedAsync()
    {
        prioridadesDisponibles = await RecurreciaServices.GetPrioridad();
        frecuencias = await RecurreciaServices.GetFrecuencia();

        Console.WriteLine($"Prioridades: {prioridadesDisponibles.Count}");
        foreach (var p in prioridadesDisponibles) Console.WriteLine(p.Titulo);

        Console.WriteLine($"Frecuencias: {frecuencias.Count}");
        foreach (var f in frecuencias) Console.WriteLine(f.Nombre);
    }
}
