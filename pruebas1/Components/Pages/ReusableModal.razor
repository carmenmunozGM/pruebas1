    private bool ValidarFormulario()
    {
        erroresFormulario.Clear();

        if (FormType == FormTypes.Evento)
        {
            if (string.IsNullOrWhiteSpace(titulo))
                erroresFormulario.Add("Título");

            if (selectedPrioridadId == null)
                erroresFormulario.Add("Prioridad");

            if (selectedFrecuenciaId == null)
