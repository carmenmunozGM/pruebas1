        align-items: center;
        border-bottom: 3px solid var(--color-secondary); /* Acento de color */
    }

    .header-title {
        font-size: 1.4rem;
        font-weight: 700;
        margin: 0;
    }

    .close-btn {
        font-size: 2rem;
        font-weight: bold;
        cursor: pointer;
        transition: transform 0.2s ease, color 0.2s ease;
        line-height: 1;
        opacity: 0.8;
    }

        .close-btn:hover {
            color: var(--color-secondary); /* Color suave para hover */
            transform: rotate(90deg) scale(1.1);
            opacity: 1;
        }

