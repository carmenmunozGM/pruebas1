        return freq?.Nombre ?? "";
    }

    private void FiltrarEmpleados(ChangeEventArgs e)
    {
        searchText = e.Value?.ToString() ?? "";
        mostrarLista = !string.IsNullOrWhiteSpace(searchText);

        if (!mostrarLista)
            return;

        var texto = searchText.Trim().ToLower();

        empleadosFiltrados = empleados
            .Where(emp =>
                emp.Nombre.ToLower().Contains(texto) ||
                emp.ClavePersonal.ToString().Contains(texto))
            .Take(10)
            .ToList();
    }

    private void AgregarParticipante(EmpleadoDTO emp)
    {
        if (!participantesSeleccionados.Any(x => x.Id == emp.Id))
            participantesSeleccionados.Add(emp);

        searchText = "";
        mostrarLista = false;
    }

    private void QuitarParticipante(EmpleadoDTO emp)
    {
        participantesSeleccionados.Remove(emp);
    }

