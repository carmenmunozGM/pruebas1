            if (!FechaFin.HasValue)
                erroresFormulario.Add("Fecha término");

            if (!HoraFin.HasValue)
                erroresFormulario.Add("Hora término");

            if (selectedSalaId <= 0)
                erroresFormulario.Add("Sala");
        }

        if (FormType == FormTypes.Tareas)
        {
            if (string.IsNullOrWhiteSpace(titulo))
                erroresFormulario.Add("Título");

            if (selectedPrioridadId == null)
                erroresFormulario.Add("Prioridad");

            if (selectedFrecuenciaId == null)
                erroresFormulario.Add("Recurrencia");

            if (!FechaInicio.HasValue)
                erroresFormulario.Add("Fecha inicio");

            if (!FechaFin.HasValue)
                erroresFormulario.Add("Fecha término");
        }

        return erroresFormulario.Count == 0;
