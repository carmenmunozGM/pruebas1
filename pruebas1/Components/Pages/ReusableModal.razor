@page "/modal-optimizado"
@using Microsoft.AspNetCore.Components.Web
@using System.Globalization
@using Microsoft.JSInterop
@inject AgendaService AgendaService
@inject SalasEmService SalasEmService
@inject ReglasRecurrenciaServices reglasRecurrenciaServices
@inject IJSRuntime JSRuntime
@inject UsuarioState UsuarioState
@using System.Diagnostics
@using Newtonsoft.Json
@using pruebas1.Components.DTOs
@using pruebas1.Entidades
@using pruebas1.Servicios
@using pruebas1.Components
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>﻿
<div class="action-button-wrapper">
    <button class="action-button-floating" @onclick="@OpenModal"><span style="font-size: 18px; line-height: 5;"> +</span> Crear Actividad</button>
</div>
@if (ShowModal)
{
    <div class="backdrop-overlay" >
        <div class="task-modal-card" @onclick:stopPropagation="true">
            <div class="task-modal-header">
                <h2 class="header-title">🌟 Crea tu nueva actividad</h2>
                <span class="close-btn" @onclick="CheckClose">&times;</span>
            </div>
            <div class="task-modal-body">
                <div class="activity-type-selector">
                    <button @onclick="() => SetFormType(FormTypes.Tareas)"
                            class="@(FormType == FormTypes.Tareas ? "type-btn active-type-btn" : "type-btn")">
                        ✅ Tarea
                    </button>
                    <button @onclick="() => SetFormType(FormTypes.Evento)"
                            class="@(FormType == FormTypes.Evento ? "type-btn active-type-btn" : "type-btn")">
                        🗓️ Evento - Reunión
                    </button>
                </div>
                <div class="main-form-grid">
                    <div class="form-control-group col-span-2">
                        <label>🏷️Título / Nombre *</label>
                        <InputText class="form-control" @bind-Value="titulo" />
                    </div>
                    <div class="form-control-group col-span-2">
                        <label>⚡Prioridad*</label>
                        <select class="form-input" @bind="selectedPrioridadId">
                            <option value="">Seleccione...</option>
                            @foreach (var p in prioridadesDisponibles)
                            {
                                <option value="@p.Id">@p.Titulo</option>
                            }
                        </select>
                    </div>
                    <div class="date-time-group">
                        <div class="form-control-group">
                            <label>🗓️ Fecha Inicio*</label>
                            <DatePicker Value="FechaInicio"
                                        ValueChanged="OnFechaInicioChanged"
                                        CssClass="form-control" />
                        </div>
                    </div>
                   
                    <div class="date-time-group">
                        <div class="form-control-group">
                            <label>🗓️ Fecha Término*</label>
                            <DatePicker Value="FechaFin"
                                        ValueChanged="OnFechaFinChanged"
                                        CssClass="form-control" />
                        </div>
                    </div>
                    <div class="form-control-group @(FormType != FormTypes.Evento ? "disabled-field-if-tarea" : "")">
                        <label>🕒Hora Inicio*</label>
                        <TimePickerList @bind-Value="HoraInicio" />
                    </div>
                    <div class="form-control-group @(FormType != FormTypes.Evento ? "disabled-field-if-tarea" : "")">
                        <label>🕒Hora Término*</label>
                        <TimePickerList @bind-Value="HoraFin" />
                    </div>
                    <!-- Ubicación -->
                    <div class="form-control-group col-span-2 @(FormType != FormTypes.Evento ? "disabled-field-if-tarea" : "")">
                        <label>📍 Ubicación*</label>
                        <select class="form-control"
                                @bind="selectedSalaId"
                                @bind:after="OnSalaChanged">
                            <option value="">Selecciona una sala</option>
                            @foreach (var sala in listaSalas)
                            {
                                <option value="@sala.Id">@sala.Salas</option>
                            }
                            <option value="-1">Otro...</option>
                        </select>
                        @if (mostrarOtraUbicacion)

                        {
                            <input class="form-control mt-2"
                                   placeholder="Escribe la ubicación"
                                   @bind="ubicacionOtra" />
                        }
                    </div>
                    <div class="form-control-group col-span-2 @(FormType != FormTypes.Evento ? "disabled-field-if-tarea" : "")">
                        <label>👥Participantes</label>
                        <div class="autocomplete-container">
                            <div class="chips-container">
                                @foreach (var p in participantesSeleccionados)
                                {
                                    <div class="chip">
                                        @p.Nombre (@p.ClavePersonal)
                                        <span class="chip-remove" @onclick="() => QuitarParticipante(p)">×</span>
                                    </div>
                                }
                                <input type="text"
                                       class="chip-input"
                                       placeholder="Agregar participante..."
                                       value="@searchText"
                                       @oninput="FiltrarEmpleados"
                                       disabled="@(FormType != FormTypes.Evento)" />
                            </div>
                            @if (mostrarLista && empleadosFiltrados?.Count > 0)
                            {
                                <ul class="autocomplete-list">
                                    @foreach (var emp in empleadosFiltrados)
                                    {
                                        <li @onclick="() => AgregarParticipante(emp)">
                                            <strong>@emp.Nombre</strong> — @emp.ClavePersonal<br />
                                            <small>@emp.Puesto — @emp.Area</small>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                    <div class="form-control-group col-span-2">
                        <label>📝Descripción / Detalles</label>
                        <InputTextArea class="form-control" @bind-Value="descripcion" />
                    </div>
                    <div class="form-control-group col-span-2 @(FormType == FormTypes.Evento ? "disabled-field" : "")">
                        <label>✅Checklist / Sub Tareas</label>

                        <div class="input-with-button-group">
                            <input @bind="newSubtask" @onkeydown="AddSubtaskOnEnter"
                                   class="form-input" placeholder="Añadir paso a la checklist"
                                   disabled="@(FormType == FormTypes.Evento)" />

                            <button class="btn btn-add"
                                    @onclick="AddSubtask"
                                    disabled="@(FormType == FormTypes.Evento)">
                                Añadir
                            </button>
                        </div>

                        <div class="checklist-list-wrapper">
                            <ul class="checklist-list">
                                @foreach (var task in subtasks)
                                {
                                    <li class="checklist-item">
                                        <span class="checklist-text">@task</span>
                                        <button class="delete-checklist-item" @onclick="() => RemoveSubtask(task)">🗑️</button>
                                    </li>
                                }
                        </ul>
                    </div>
                </div>

                </div>

                <script>
                    window.alertaGuardadoEvento = function () {
                        Swal.fire({
                            icon: 'success',
                            title: 'Guardado con éxito 🎉',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            Swal.fire({
                                icon: 'info',
                                title: 'No se te olvide registrarlo en RED GM',
                                text: 'Verifica en Red GM este evento',
                                confirmButtonText: 'Entendido'
                            });
                        });
                    }

                    window.alertaGuardadoSimple = function () {
                        Swal.fire({
                            icon: 'success',
                            title: 'Guardado con éxito 🎉',
                            confirmButtonText: 'OK'
                        });
                    }
                </script>
                <div class="task-modal-footer">
                    <button class="btn btn-secondary-action" @onclick="CheckClose">Cancelar</button>
                    <button class="btn btn-primary-action" @onclick="Guardar">Guardar Actividad</button>
                </div>

            </div>

        </div>
    </div>
    <script>
                 window.disableBodyScroll = () => {
            document.body.style.overflow = 'hidden';
            document.body.style.position = 'fixed';
            document.body.style.width = '100%';
        }

        window.enableBodyScroll = () => {
            document.body.style.overflow = '';
            document.body.style.position = '';
            document.body.style.width = '';
        }

    </script>

@code {
    [Parameter] public EventCallback<TareaCreada> OnSave { get; set; }
    // --- FECHAS ---
    private DateTime? FechaInicio { get; set; }
    private DateTime? FechaFin { get; set; }
    // --- HORAS ---
    private TimeOnly? HoraInicio { get; set; }
    private TimeOnly? HoraFin { get; set; }
    // --- VARIABLES ---
    private string titulo = string.Empty;
    private string descripcion = string.Empty;
    private List<string> subtasks = new();
    private string newSubtask = string.Empty;
    private List<SalasEm> listaSalas = new();
    private int? selectedSalaId = null;
    bool mostrarOtraUbicacion = false;
    string ubicacionOtra = "";
    private List<FrecuenciaRecurrencia> frecuencias = new();
    private List<Prioridad> prioridadesDisponibles = new();
    private int? selectedPrioridadId;
    private int? selectedFrecuenciaId;
    private bool ShowModal { get; set; } = false;
    private string searchText = "";
    private bool mostrarLista = false;
    public enum FormTypes { Evento, Tareas }
    public FormTypes FormType { get; set; } = FormTypes.Tareas;
    List<EmpleadoDTO> empleados = new();
    List<EmpleadoDTO> empleadosFiltrados = new();
    private List<EmpleadoDTO> participantesSeleccionados = new();
    private TareaCreada TareaCreada { get; set; } = new();
    private TareaCreada nuevaTarea = new TareaCreada();


    protected override async Task OnInitializedAsync()
    {
        var cultura = new CultureInfo("es-MX");
        CultureInfo.CurrentCulture = cultura;
        CultureInfo.CurrentUICulture = cultura;

        listaSalas = await SalasEmService.GetSalas();
        Debug.WriteLine($"Salas cargadas: {listaSalas.Count}");
        foreach (var s in listaSalas) Debug.WriteLine($"Id={s.Id} - Nombre={s.Salas}");
        frecuencias = await reglasRecurrenciaServices.GetFrecuencia();
        prioridadesDisponibles = await reglasRecurrenciaServices.GetPrioridad();

        try
        {
            using var client = new HttpClient();
            var json = await client.GetStringAsync("https://redgm.site:9096/empleado");
            empleados = JsonConvert.DeserializeObject<List<EmpleadoDTO>>(json);
        }
        catch { }
    }
    private string ObtenerNombreFrecuencia(int? idFrecuencia)
    {
        if (idFrecuencia == null)
            return "";

        var freq = frecuencias.FirstOrDefault(f => f.Id == idFrecuencia.Value);

        return freq?.Nombre ?? "";
    }

    private void FiltrarEmpleados(ChangeEventArgs e)
    {
        searchText = e.Value?.ToString() ?? "";
        mostrarLista = !string.IsNullOrWhiteSpace(searchText);

        if (!mostrarLista)
            return;

        var texto = searchText.Trim().ToLower();

        empleadosFiltrados = empleados
            .Where(emp =>
                emp.Nombre.ToLower().Contains(texto) ||
                emp.ClavePersonal.ToString().Contains(texto))
            .Take(10)
            .ToList();
    }

    private void AgregarParticipante(EmpleadoDTO emp)
    {
        if (!participantesSeleccionados.Any(x => x.Id == emp.Id))
            participantesSeleccionados.Add(emp);

        searchText = "";
        mostrarLista = false;
    }

    private void QuitarParticipante(EmpleadoDTO emp)
    {
        participantesSeleccionados.Remove(emp);
    }

    private void OpenModal()
    {
        LimpiarCampos();
        ShowModal = true;
    }
   
    private void CheckClose()
    {
        LimpiarCampos();
        ShowModal = false;
    }
    void OnSalaChanged()
    {
        mostrarOtraUbicacion = false;
        ubicacionOtra = "";

        if (!selectedSalaId.HasValue)
            return;

        if (selectedSalaId.Value == -1)
        {
            mostrarOtraUbicacion = true;
        }
    }
    // ----------------- GUARDAR -----------------
    private async Task Guardar()
    {
        string alertMessage = "";
        if (string.IsNullOrWhiteSpace(titulo))
            alertMessage += "Debes completar el título.\n";

        if (!selectedPrioridadId.HasValue)
            alertMessage += "Debes seleccionar la prioridad.\n";
        if (!FechaInicio.HasValue)
            alertMessage += "Debes seleccionar la fecha de inicio.\n";
        else if (FechaInicio.Value.Date < DateTime.Today)
            alertMessage += "La fecha de inicio debe ser hoy o una fecha futura.\n";

        if (!FechaFin.HasValue)
            alertMessage += "Debes seleccionar la fecha de término.\n";
        else if (FechaInicio.HasValue && FechaFin.Value.Date < FechaInicio.Value.Date)
            alertMessage += "La fecha de término no puede ser menor a la fecha de inicio.\n";
        if (FormType == FormTypes.Evento)
        {
            if (!HoraInicio.HasValue)
                alertMessage += "Debes seleccionar la hora de inicio.\n";

            if (!HoraFin.HasValue)
                alertMessage += "Debes seleccionar la hora de término.\n";

            if (selectedSalaId <= 0 && string.IsNullOrWhiteSpace(ubicacionOtra))
                alertMessage += "Debes seleccionar o escribir la ubicación.\n";
        }

        if (!string.IsNullOrEmpty(alertMessage))
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire", new
            {
                icon = "error",
                title = "Campos obligatorios incompletos",
                text = alertMessage
            });
            return;
        }
        await JSRuntime.InvokeVoidAsync("alert", $"DEBUG VALORES:\nIdUsuario: {UsuarioState.IdUsuario}\nIdAgenda: {UsuarioState.IdAgenda}");
        var idUsuario = UsuarioState.IdUsuario;
        var idAgenda = UsuarioState.IdAgenda;

        if (idUsuario == 0 || idAgenda == 0)
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire", new
            {
                icon = "error",
                title = "Usuario/Agenda inválidos"
            });
            return;
        }
        DateTime? fechaInicioFinal = null;
        DateTime? fechaFinFinal = null;

        if (FechaInicio.HasValue)
        {
            var hora = HoraInicio?.ToTimeSpan() ?? TimeSpan.FromHours(12);
            fechaInicioFinal = DateTime.SpecifyKind(
                FechaInicio.Value.Date.Add(hora),
                DateTimeKind.Local
            );
        }

        if (FechaFin.HasValue)
        {
            var hora = HoraFin?.ToTimeSpan() ?? TimeSpan.FromHours(12);
            fechaFinFinal = DateTime.SpecifyKind(
                FechaFin.Value.Date.Add(hora),
                DateTimeKind.Local
            );
        }
        string ubicacionFinal = "";
        int idSalaFinal = 0;

        if (selectedSalaId.HasValue)
        {
            if (selectedSalaId.Value == -1)
            {
                idSalaFinal = 0;
                ubicacionFinal = (ubicacionOtra ?? "").Trim();
            }
            else if (selectedSalaId.Value > 0)
            {
                idSalaFinal = selectedSalaId.Value;
                ubicacionFinal = "";
            }
        }

        var participantesIds = participantesSeleccionados.Select(p => p.Id).ToList();

        nuevaTarea = new TareaCreada
        {
            Tipo = FormType == FormTypes.Evento ? "Evento" : "Tarea",
            Titulo = titulo?.Trim(),
            Descripcion = descripcion?.Trim(),

            FechaInicio = fechaInicioFinal,
            FechaFin = fechaFinFinal,

            HoraInicio = HoraInicio,
            HoraFin = HoraFin,

            Ubicacion = ubicacionFinal,
            IdSala = idSalaFinal,

            Subtareas = subtasks.ToList(),
            IsEvento = FormType == FormTypes.Evento,

            IdAgenda = idAgenda,
            IdCreador = idUsuario,
            IdResponsable = idUsuario,

            Prioridad = selectedPrioridadId ?? 0,

            IdFrecuencia = selectedFrecuenciaId,
            EsRecurrente = selectedFrecuenciaId.HasValue && selectedFrecuenciaId > 0,
            ReglaRecurrencia = ObtenerNombreFrecuencia(selectedFrecuenciaId),

            ParticipantesLista = participantesSeleccionados,
            ParticipantesSeleccionados = participantesIds
        };

        bool ok = FormType == FormTypes.Evento
            ? await AgendaService.CrearEventoApi(nuevaTarea)
            : await AgendaService.CrearTareaApi(nuevaTarea);

        if (!ok)
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire", new
            {
                icon = "error",
                title = "La Sala está ocupada en ese horario. Revisa la Red GM."
            });
            return;
        }

        await OnSave.InvokeAsync(nuevaTarea);

        if (FormType == FormTypes.Evento)
            await JSRuntime.InvokeVoidAsync("alertaGuardadoEvento");
        else
            await JSRuntime.InvokeVoidAsync("alertaGuardadoSimple");

        LimpiarCampos();
        ShowModal = false;
    }

    private async Task OnFechaInicioChanged(DateTime? value)
    {
        if (value.HasValue && value.Value.Date < DateTime.Today)
        {
            FechaInicio = null;

            await JSRuntime.InvokeVoidAsync("Swal.fire", new
            {
                icon = "warning",
                title = "Fecha inválida",
                text = "La fecha debe ser hoy o una fecha futura."
            });

            return;
        }

        FechaInicio = value;
    }
    private async Task OnFechaFinChanged(DateTime? value)
    {
        if (!FechaInicio.HasValue)
        {
            FechaFin = null;

            await JSRuntime.InvokeVoidAsync("Swal.fire", new
            {
                icon = "warning",
                title = "Primero selecciona la fecha de inicio",
                text = "Debes elegir una fecha de inicio antes de seleccionar la fecha de término."
            });

            return;
        }
        if (value.HasValue && value.Value.Date < DateTime.Today)
        {
            FechaFin = null;

            await JSRuntime.InvokeVoidAsync("Swal.fire", new
            {
                icon = "warning",
                title = "Fecha inválida",
                text = "La fecha de término debe ser hoy o una fecha futura."
            });

            return;
        }
        if (value.HasValue && value.Value.Date < FechaInicio.Value.Date)
        {
            FechaFin = null;

            await JSRuntime.InvokeVoidAsync("Swal.fire", new
            {
                icon = "warning",
                title = "Fecha inválida",
                text = "La fecha de término no puede ser menor a la fecha de inicio."
            });

            return;
        }

        FechaFin = value;
    }
    private void LimpiarCampos()
    {
        titulo = "";
        descripcion = "";
        subtasks.Clear();
        newSubtask = "";

        FechaInicio = null;
        FechaFin = null;
        HoraInicio = null;
        HoraFin = null;

        ubicacionOtra = "";
        mostrarOtraUbicacion = false;

        selectedSalaId = null;

        selectedPrioridadId = null;
        selectedFrecuenciaId = null;

        participantesSeleccionados.Clear();

        FormType = FormTypes.Tareas;
    }

    private void SetFormType(FormTypes type)
    {
        FormType = type;
        if (type == FormTypes.Evento) subtasks.Clear();
        LimpiarCamposNoTipo(); 
    }
    private void LimpiarCamposNoTipo()
    {
        titulo = "";
        descripcion = "";
        subtasks.Clear();
        newSubtask = "";

        FechaInicio = null;
        FechaFin = null;
        HoraInicio = null;
        HoraFin = null;

        ubicacionOtra = "";
        mostrarOtraUbicacion = false;

        selectedSalaId = 0;
        selectedPrioridadId = null;
        selectedFrecuenciaId = null;

        participantesSeleccionados.Clear();
    }
    private void AddSubtask()
    {
        if (!string.IsNullOrWhiteSpace(newSubtask))
        {
            subtasks.Add(newSubtask.Trim());
            newSubtask = "";
        }
    }

    private void AddSubtaskOnEnter(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") AddSubtask();
    }

    private void RemoveSubtask(string taskToRemove)
    {
        subtasks.Remove(taskToRemove);
    }
}

