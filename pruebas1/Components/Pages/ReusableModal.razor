            await JSRuntime.InvokeVoidAsync("Swal.fire", new
            {
                icon = "error",
                title = "Usuario o agenda inválidos"
            });
            return;
        }

        // 3️⃣ Construir fechas finales (IMPORTANTE)
        DateTime? fechaInicioFinal = null;
