@page "/modal-optimizado"
@using Microsoft.AspNetCore.Components.Web
@using System.Globalization
@using Microsoft.JSInterop
@inject AgendaService AgendaService
@inject SalasEmService SalasEmService
@inject ReglasRecurrenciaServices reglasRecurrenciaServices
@inject IJSRuntime JSRuntime
@inject UsuarioState UsuarioState
@using System.Diagnostics
@using Newtonsoft.Json
@using pruebas1.Components.DTOs
@using pruebas1.Entidades
@using pruebas1.Servicios
@using pruebas1.Components
<script src="js/alertas-modal.js"></script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="action-button-wrapper">
    <button class="action-button-floating" @onclick="@OpenModal">➕ Crear Nueva Actividad</button>
</div>

@if (ShowModal)
{
    <div class="backdrop-overlay" @onclick="CheckClose">
        <div class="task-modal-card" @onclick:stopPropagation="true">

            <div class="task-modal-header">
                <h2 class="header-title">🌟 Crea tu nueva actividad</h2>
                <span class="close-btn" @onclick="CheckClose">&times;</span>
            </div>

            <div class="task-modal-body">

                <!-- Tipo -->
                <div class="activity-type-selector">
                    <button @onclick="() => SetFormType(FormTypes.Tareas)"
                            class="@(FormType == FormTypes.Tareas ? "type-btn active-type-btn" : "type-btn")">
                        ✅ Tarea
                    </button>

                    <button @onclick="() => SetFormType(FormTypes.Evento)"
                            class="@(FormType == FormTypes.Evento ? "type-btn active-type-btn" : "type-btn")">
                        🗓️ Evento - Reunión
                    </button>
                </div>

                <div class="main-form-grid">

                    <!-- Título -->
                    <div class="form-control-group col-span-2">
                        <label>Título / Nombre *</label>
                        <InputText class="form-control" @bind-Value="titulo" />
                    </div>

                    <!-- Prioridad -->
                    <div class="form-control-group">
                        <label>Prioridad</label>
                        <select class="form-input" @bind="selectedPrioridadId">
                            @if (prioridadesDisponibles == null || !prioridadesDisponibles.Any())
                            {
                                <option disabled>Cargando...</option>
                            }
                            else
                            {
                                @foreach (var p in prioridadesDisponibles)
                                {
                                    <option value="@p.Id">@p.Titulo</option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Recurrencia -->
                    <div class="form-control-group">
                        <label>Recurrencia</label>
                        <select class="form-input" @bind="selectedFrecuenciaId">
                            @if (frecuencias == null || !frecuencias.Any())
                            {
                                <option disabled>Cargando...</option>
                            }
                            else
                            {
                                @foreach (var f in frecuencias)
                                {
                                    <option value="@f.Id">@f.Descripcion</option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Fecha inicio -->
                    <div class="date-time-group">
                        <div class="form-control-group">
                            <label>🗓️ Fecha Inicio</label>
                            <DatePicker @bind-Value="FechaInicio" CssClass="form-control" />
                        </div>
                    </div>

                    <!-- Hora inicio -->
                    <div class="form-control-group">
                        <label>Hora Inicio</label>
                        <input type="time" class="form-input time-control"
                               @bind="HoraInicio" @bind:event="oninput" />
                    </div>

                    <!-- Fecha fin -->
                    <div class="date-time-group">
                        <div class="form-control-group">
                            <label>Fecha Término</label>
                            <DatePicker @bind-Value="FechaFin" CssClass="form-control" />
                        </div>
                    </div>

                    <!-- Hora fin -->
                    <div class="form-control-group">
                        <label>Hora Término</label>
                        <input type="time" class="form-input time-control"
                               @bind="HoraFin" @bind:event="oninput" />
                    </div>

                    <!-- Ubicación -->
                     <div class="form-control-group col-span-2 @(FormType != FormTypes.Evento ? "disabled-field-if-tarea" : "")">
    <label>Ubicación</label>

    <select class="form-input"
            @bind="selectedSalaId"
            @onchange="OnSalaChanged"
            disabled="@(FormType != FormTypes.Evento)">
        <option value="0">Seleccione una opción</option>

        @foreach (var sala in listaSalas)
        {
            <option value="@sala.Id">@sala.Salas</option>
        }

        <option value="-1">Otra...</option>
    </select>

    @if (showOtherLocationInput && FormType == FormTypes.Evento)
    {
        <input type="text"
               class="form-input mt-2"
               placeholder="Ingrese otra ubicación específica"
               @bind="ubicacionSeleccionada" />
    }
</div>


                    <!-- Participantes -->
                    <div class="form-control-group col-span-2 @(FormType != FormTypes.Evento ? "disabled-field-if-tarea" : "")">
                        <label>Participantes</label>

                        <div class="autocomplete-container">

                            <!-- Chips -->
                            <div class="chips-container">
                                @foreach (var p in participantesSeleccionados)
                                {
                                    <div class="chip">
                                        @p.Nombre (@p.ClavePersonal)
                                        <span class="chip-remove" @onclick="() => QuitarParticipante(p)">×</span>
                                    </div>
                                }

                                <!-- Input -->
                                <input type="text"
                                       class="chip-input"
                                       placeholder="Agregar participante..."
                                       value="@searchText"
                                       @oninput="FiltrarEmpleados"
                                       disabled="@(FormType != FormTypes.Evento)" />
                            </div>

                            <!-- Lista Autocomplete -->
                            @if (mostrarLista && empleadosFiltrados?.Count > 0)
                            {
                                <ul class="autocomplete-list">
                                    @foreach (var emp in empleadosFiltrados)
                                    {
                                        <li @onclick="() => AgregarParticipante(emp)">
                                            <strong>@emp.Nombre</strong> — @emp.ClavePersonal<br />
                                            <small>@emp.Puesto — @emp.Area</small>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>


                    <!-- Descripción -->
                    <div class="form-control-group col-span-2">
                        <label>Descripción / Detalles</label>
                        <InputTextArea class="form-control" @bind-Value="descripcion" />
                    </div>

                    <!-- Subtareas -->
                    <div class="form-control-group col-span-2 @(FormType == FormTypes.Evento ? "disabled-field" : "")">
                        <label>Checklist / Sub Tareas</label>

                        <div class="input-with-button-group">
                            <input @bind="newSubtask" @onkeydown="AddSubtaskOnEnter"
                                   class="form-input" placeholder="Añadir paso a la checklist"
                                   disabled="@(FormType == FormTypes.Evento)" />

                            <button class="btn btn-add"
                                    @onclick="AddSubtask"
                                    disabled="@(FormType == FormTypes.Evento)">
                                Añadir
                            </button>
                        </div>

                        <div class="checklist-list-wrapper">
                            <ul class="checklist-list">
                                @foreach (var task in subtasks)
                                {
                                    <li class="checklist-item">
                                        <span class="checklist-text">@task</span>
                                        <button class="delete-checklist-item" @onclick="() => RemoveSubtask(task)">🗑️</button>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                </div>
                <script>
window.alertaGuardadoEvento = function() {
    Swal.fire({
        icon: 'success',
        title: 'Guardado con éxito 🎉',
        confirmButtonText: 'OK'
    }).then(() => {
        Swal.fire({
            icon: 'info',
            title: 'No se te olvide registrarlo en RED GM',
            text: 'Verifica en Red GM este evento',
            confirmButtonText: 'Entendido'
        });
    });
}

window.alertaGuardadoSimple = function() {
    Swal.fire({
        icon: 'success',
        title: 'Guardado con éxito 🎉',
        confirmButtonText: 'OK'
    });
}
</script>


                <!-- Footer -->
                <div class="task-modal-footer">
                    <button class="btn btn-secondary-action" @onclick="CheckClose">Cancelar</button>
                    <button class="btn btn-primary-action" @onclick="Guardar">Guardar Actividad</button>
                </div>

            </div>

        </div>
    </div>

    @code {

    // --- PARAMETROS ---
    [Parameter] public EventCallback<TareaCreada> OnSave { get; set; }

    // --- FECHAS ---
    private DateTime? FechaInicio { get; set; }
    private DateTime? FechaFin { get; set; }

    // --- HORAS (TimeOnly) ---
    private TimeOnly? HoraInicio { get; set; }
    private TimeOnly? HoraFin { get; set; }

    // --- CAMPOS ---
    private string titulo = string.Empty;
    private string descripcion = string.Empty;


    private List<string> subtasks = new();
    private string newSubtask = string.Empty;

    private List<SalasEm> listaSalas = new();
    private int selectedSalaId = 0;

    private string? ubicacionSeleccionada;
    private bool showOtherLocationInput = false;

    private List<FrecuenciaRecurrencia> frecuencias = new();
    private List<Prioridad> prioridadesDisponibles = new();
    private int? selectedPrioridadId;
    private int? selectedFrecuenciaId { get; set; }



    private bool ShowModal = false;
    //Para poder filtrar en participantes
    private string participantes = "";
    private bool mostrarLista = false;
    private string searchText = "";
    //
    public enum FormTypes { Evento, Tareas }
    public FormTypes FormType { get; set; } = FormTypes.Tareas;
    /// Para participantes
    List<EmpleadoDTO> empleados = new();
    List<EmpleadoDTO> empleadosFiltrados = new();
    // Lista final de chips
    private List<EmpleadoDTO> participantesSeleccionados = new();
    // ---------------------------
    protected override async Task OnInitializedAsync()
    {
        var cultura = new CultureInfo("es-MX");
        CultureInfo.CurrentCulture = cultura;
        CultureInfo.CurrentUICulture = cultura;

        listaSalas = await SalasEmService.GetSalas();
        frecuencias = await reglasRecurrenciaServices.GetFrecuencia();
        prioridadesDisponibles = await reglasRecurrenciaServices.GetPrioridad();


        try
        {
            using var client = new HttpClient();
            var json = await client.GetStringAsync("https://redgm.site:9096/empleado");

            empleados = JsonConvert.DeserializeObject<List<EmpleadoDTO>>(json);
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error cargando empleados: " + ex.Message);
        }
    }
    //Para filtrar en particpantes
    private void FiltrarEmpleados(ChangeEventArgs e)
    {
        searchText = e.Value?.ToString() ?? "";

        if (string.IsNullOrWhiteSpace(searchText))
        {
            mostrarLista = false;
            return;
        }

        mostrarLista = true;

        var texto = searchText.Trim().ToLower();

        empleadosFiltrados = empleados
            .Where(emp =>
                emp.Nombre.ToLower().Contains(texto) ||
                emp.ClavePersonal.ToString().Contains(texto))
            .Take(10)
            .ToList();
    }
    private void OnSalaChanged(ChangeEventArgs e)
    {
        selectedSalaId = int.Parse(e.Value.ToString());
        showOtherLocationInput = (selectedSalaId == -1);
    }

    private void AgregarParticipante(EmpleadoDTO emp)
    {
        // Evitar repetidos
        if (!participantesSeleccionados.Any(x => x.Id == emp.Id))
        {
            participantesSeleccionados.Add(emp);
        }

        searchText = "";
        mostrarLista = false;
    }
    private void QuitarParticipante(EmpleadoDTO emp)
    {
        participantesSeleccionados.Remove(emp);
    }

    private void SeleccionarEmpleado(EmpleadoDTO emp)
    {
        participantes = $"{emp.Nombre} ({emp.ClavePersonal})";
        mostrarLista = false;
    }
    private void OpenModal()
    {
        LimpiarCampos();
        ShowModal = true;
    }

    private void CheckClose()
    {
        LimpiarCampos();
        ShowModal = false;
    }

    // ---------------------------
    private void HandleLocationChange(ChangeEventArgs e)
    {
        //ubicacionSeleccionada = e.Value?.ToString();
        showOtherLocationInput = ubicacionSeleccionada == "otra";
    }

    // --------------crear iicio-------------
    private async Task Guardar()
    {
        // Validaciones (mantén las tuyas)
        if (string.IsNullOrWhiteSpace(titulo))
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Falta el título", text = "Debes escribir un título." });
            return;
        }

        var idUsuario = UsuarioState.IdUsuario;
        var idAgenda = UsuarioState.IdAgenda;
        if (idUsuario == 0 || idAgenda == 0)
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Usuario/Agenda inválidos", text = $"Usuario:{idUsuario} Agenda:{idAgenda}" });
            return;
        }

        // --- Combinar fecha + hora para fechaInicio/fechaFin ---
        DateTime? fechaInicioFinal = null;
        DateTime? fechaFinFinal = null;

        if (FechaInicio != null)
        {
            var d = FechaInicio.Value.Date;
            if (HoraInicio != null)
                fechaInicioFinal = d.AddHours(HoraInicio.Value.Hour).AddMinutes(HoraInicio.Value.Minute);
            else
                fechaInicioFinal = d;
        }

        if (FechaFin != null)
        {
            var d2 = FechaFin.Value.Date;
            if (HoraFin != null)
                fechaFinFinal = d2.AddHours(HoraFin.Value.Hour).AddMinutes(HoraFin.Value.Minute);
            else
                fechaFinFinal = d2;
        }

        // --- Determinar IdSala y Ubicacion según selección ---
        // Recomendación: guarda el id de la sala cuando rellenes listaSalas (usa sala.Id)
        int idSalaSeleccionada = 0;
        string ubicacionParaEnviar = "";

        // Si el usuario escogió "otra", ubicacionSeleccionada contiene el texto
        if (!string.IsNullOrWhiteSpace(ubicacionSeleccionada) && ubicacionSeleccionada != "otra")
        {
            // ubicacionSeleccionada hoy contiene el nombre de la sala, pero necesitamos el id.
            // Si en tu <select> estás guardando el nombre, cámbialo para guardar el id.
            // Aquí intento resolver con búsqueda en listaSalas por nombre:
            var salaEncontrada = listaSalas.FirstOrDefault(s => s.Salas == ubicacionSeleccionada);
            if (salaEncontrada != null)
                idSalaSeleccionada = salaEncontrada.Id; // Asegúrate SalasEm tiene Id
            else
                idSalaSeleccionada = 0; // fallback
        }
        else if (showOtherLocationInput && !string.IsNullOrWhiteSpace(ubicacionSeleccionada))
        {
            // Usuario escribió una ubicación libre (otra)
            idSalaSeleccionada = 0;
            ubicacionParaEnviar = ubicacionSeleccionada;
        }
        else
        {
            // Si el <select> guarda el id en vez del nombre, conviértelo:
            // suponiendo que tienes un campo int selectedSalaId, úsalo aquí:
            // idSalaSeleccionada = selectedSalaId;
            // y si selectedSalaId > 0 -> ubicacionParaEnviar = "";
        }

        // --- Preparar lista de ids de participantes ---
        var participantesIds = participantesSeleccionados?.Select(p => p.Id).ToList() ?? new List<int>();

        // Construir objeto TareaCreada correctamente
        var nuevaTarea = new TareaCreada
        {
            Tipo = FormType == FormTypes.Evento ? "Evento" : "Tarea",
            Titulo = titulo?.Trim(),
            Descripcion = descripcion?.Trim(),
            FechaInicio = fechaInicioFinal,
            FechaFin = fechaFinFinal,
            Ubicacion = ubicacionParaEnviar,            // string libre si "otra"
            ParticipantesLista = participantesSeleccionados.ToList(), // lista de EmpleadoDTO
            ParticipantesSeleccionados = participantesIds,            // lista de ints
            Subtareas = subtasks.ToList(),
            IsEvento = FormType == FormTypes.Evento,

            IdAgenda = idAgenda,
            IdCreador = idUsuario,
            IdResponsable = idUsuario,

            // opcionales
            IdSala = idSalaSeleccionada,
            EsRecurrente = (selectedFrecuenciaId != null && selectedFrecuenciaId > 0),
            ReglaRecurrencia = (selectedFrecuenciaId != null ? selectedFrecuenciaId.ToString() : "")
        };

        // Debug: ver payload antes de enviar
        Debug.WriteLine("[MODAL] Payload nueva actividad:");
        Debug.WriteLine(JsonConvert.SerializeObject(nuevaTarea));

        bool ok = false;
        if (FormType == FormTypes.Evento)
            ok = await AgendaService.CrearEventoApi(nuevaTarea);
        else
            ok = await AgendaService.CrearTareaApi(nuevaTarea);

        if (!ok)
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Error al guardar", text = "La API rechazó la actividad." });
            return;
        }

        await OnSave.InvokeAsync(nuevaTarea);
        
        // ALERTAS SEGÚN EL TIPO
// ALERTAS SEGÚN EL TIPO
if (FormType == FormTypes.Evento)
{
    await JSRuntime.InvokeVoidAsync("alertaGuardadoEvento");
}
else
{
    await JSRuntime.InvokeVoidAsync("alertaGuardadoSimple");
}

        LimpiarCampos();
        ShowModal = false;
    }

    // -----------termino----------------

    // ---------------------------
    private void LimpiarCampos()
    {
        titulo = "";
        descripcion = "";
        participantes = "";
        subtasks.Clear();
        newSubtask = "";

        FechaInicio = null;
        FechaFin = null;
        HoraInicio = null;
        HoraFin = null;

        ubicacionSeleccionada = null;
        showOtherLocationInput = false;

        selectedPrioridadId = null;
        selectedFrecuenciaId = null;

        FormType = FormTypes.Tareas;
    }

    private void SetFormType(FormTypes type)
    {
        FormType = type;
        if (type == FormTypes.Evento)
            subtasks.Clear();
    }

    private void AddSubtask()
    {
        if (!string.IsNullOrWhiteSpace(newSubtask))
        {
            subtasks.Add(newSubtask.Trim());
            newSubtask = string.Empty;
        }
    }

    private void AddSubtaskOnEnter(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") AddSubtask();
    }

    private void RemoveSubtask(string taskToRemove)
    {
        subtasks.Remove(taskToRemove);
    }
}



                            }



                            <style>
    /* === Paleta de Colores Nueva (Azul y Amarillo/Naranja) === */
    :root {
        --color-secondary: #C6E9F0; /* Amarillo/Dorado (Para Acentos y Activo) */
        --color-success: #28a745; /* Verde para éxito (Guardar) */
        --color-danger: #dc3545; /* Rojo para cancelar */
        --color-background-light: #f8f9fa; /* Gris muy claro para el cuerpo */
        --color-border: #ced4da; /* Borde suave */
        --color-text-dark: #343a40; /* Texto oscuro */
        --color-text-light: #6c757d; /* Texto secundario */
    }

    /* === Botón Flotante === */
    .action-button-wrapper {
        display: flex;
        justify-content: flex-end;
        padding-right: 2%;
    }

    .action-button-floating {
        margin: 10px 2% 20px 0;
        background-color: var(--color-secondary);
        color: var(--color-primary); /* Texto oscuro en el botón amarillo */
        border: none;
        border-radius: 50px;
        padding: 12px 24px;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        transition: 0.3s ease;
    }

        .action-button-floating:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(0, 0, 0, 0.3);
            border-block-color: black;
        }

    /* === Contenedor principal del Modal (Fondo Oscuro) === */
    .backdrop-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.55);
        display: flex;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(4px);
        z-index: 1000;
        padding: 20px;
    }

    /* === Tarjeta Modal === */
    .task-modal-card {
        width: 95%;
        max-width: 950px;
        background: #fff;
        border-radius: 16px;
        display: flex;
        flex-direction: column;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
        overflow: hidden;
        animation: scaleIn 0.3s ease-out;
        max-height: 90vh;
    }

    /* Animación de entrada */
    @@keyframes scaleIn {
        from {
            transform: scale(0.9);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }

    /* === Encabezado === */
    .task-modal-header {
        background: var(--color-primary);
        color: #000;
        padding: 16px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 3px solid var(--color-secondary); /* Acento de color */
    }

    .header-title {
        font-size: 1.4rem;
        font-weight: 700;
        margin: 0;
    }

    .close-btn {
        font-size: 2rem;
        font-weight: bold;
        cursor: pointer;
        transition: transform 0.2s ease, color 0.2s ease;
        line-height: 1;
        opacity: 0.8;
    }

        .close-btn:hover {
            color: var(--color-secondary); /* Color suave para hover */
            transform: rotate(90deg) scale(1.1);
            opacity: 1;
        }

    /* === Cuerpo del Formulario === */
    .task-modal-body {
        padding: 20px 25px;
        background: var(--color-background-light);
        flex: 1;
        overflow-y: auto;
    }

    /* === Selector de Tipo de Actividad === */
    .activity-type-selector {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
        background: #e9ecef; /* Fondo sutil para el selector */
        padding: 5px;
        border-radius: 10px;
    }

    .type-btn {
        flex: 1;
        padding: 10px 15px;
        border-radius: 8px;
        border: none;
        background: transparent;
        font-weight: 600;
        font-size: 1rem;
        color: var(--color-text-dark);
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: none;
    }

        .type-btn:hover {
            background: #dcdcdc; /* Gris de hover */
        }

    .active-type-btn {
        background: #fff;
        color: var(--color-primary);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        border: 2px solid var(--color-secondary); /* Borde para indicar activo */
        transform: translateY(-1px);
    }

    /* === Estructura del Formulario (Grid) === */
    .main-form-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 15px;
    }

    .col-span-2 {
        grid-column: span 2;
    }

    .date-time-group {
        display: grid;
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .btn btn-secondary-action {
    }

    .autocomplete-container {
        position: relative;
        width: 100%;
    }

    /* Chips */
    .chips-container {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        padding: 6px 8px;
        min-height: 45px;
        border: 1px solid #dcdcdc;
        border-radius: 8px;
        background: #fff;
    }

    .chip {
        background: #e7f0ff;
        padding: 6px 10px;
        border-radius: 20px;
        font-size: 13px;
        display: flex;
        align-items: center;
    }

    .chip-remove {
        margin-left: 8px;
        cursor: pointer;
        font-weight: bold;
    }

    /* Input dentro de los chips */
    .chip-input {
        border: none;
        outline: none;
        flex-grow: 1;
        min-width: 120px;
